<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4">Сообщить о нарушении</h1>

    <div class="bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-md p-4 mb-6">
      <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Объект жалобы:</h3>
      <% if @report.reportable_type == 'Request' %>
        <p class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= @report.reportable.title %></p>
        <p class="text-sm text-gray-600 dark:text-gray-400">Запрос от <%= @report.reportable.user.username %></p>
      <% elsif @report.reportable_type == 'User' %>
        <p class="text-lg font-semibold text-gray-900 dark:text-gray-100"><%= @report.reportable.username %></p>
        <p class="text-sm text-gray-600 dark:text-gray-400">Профиль пользователя</p>
      <% elsif @report.reportable_type == 'Offer' %>
        <p class="text-lg font-semibold text-gray-900 dark:text-gray-100">Оффер на "<%= @report.reportable.request.title %>"</p>
        <p class="text-sm text-gray-600 dark:text-gray-400">Оффер от <%= @report.reportable.user.username %></p>
      <% end %>
    </div>

    <%= form_with(model: @report, url: reports_path, class: "space-y-4") do |f| %>
      <% if @report.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/30 border-l-4 border-red-400 dark:border-red-700 p-4">
          <h2 class="font-bold text-red-800 dark:text-red-300">Обнаружены ошибки:</h2>
          <ul class="list-disc list-inside text-sm text-red-700 dark:text-red-400">
            <% @report.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= f.hidden_field :reportable_type, value: @report.reportable_type %>
      <%= f.hidden_field :reportable_id, value: @report.reportable_id %>

      <div>
        <%= f.label :report_type, "Тип жалобы", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.select :report_type,
                     options_for_select(Report.report_types.keys.map { |r| [t("report_type.#{r}"), r] }, @report.report_type),
                     { prompt: "Выберите причину" },
                     class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :reason, "Подробное описание", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
        <%= f.text_area :reason,
            rows: 6,
            class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
            placeholder: "Опишите, что пошло не так (минимум 10 символов)" %>
      </div>

      <div>
        <%= f.submit "Отправить жалобу", class: "w-full px-4 py-2 bg-red-600 dark:bg-red-700 text-white rounded-md hover:bg-red-700 dark:hover:bg-red-800 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
