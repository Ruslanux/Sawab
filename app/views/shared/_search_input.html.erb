<%
  # Usage: render 'shared/search_input', value: params[:q], placeholder: t('filters.search_placeholder')
  value ||= nil
  placeholder ||= "Search..."
%>

<div class="relative">
  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
    <%= icon_tag(:search, class: "h-5 w-5 text-gray-400", "aria-hidden": "true") %>
  </div>
  <%= text_field_tag :q, value,
      placeholder: placeholder,
      "aria-label": placeholder,
      autocomplete: "off",
      class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-500 dark:placeholder-gray-400 rounded-lg shadow-sm focus:ring-2 focus:ring-indigo-500 focus:ring-opacity-50 focus:border-indigo-500 hover:border-gray-400 dark:hover:border-gray-500 transition-all" %>
</div>
