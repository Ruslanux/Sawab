<%# Mobile bottom navigation - only visible on small screens %>
<%# Usage: render 'shared/bottom_nav' %>

<nav class="fixed bottom-0 left-0 right-0 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700 shadow-lg z-50 md:hidden safe-area-bottom">
  <div class="flex items-center justify-around h-16">
    <%# Home %>
    <%= link_to root_path, class: "bottom-nav-item #{current_page?(root_path) ? 'active' : ''}" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
      </svg>
      <span class="text-xs mt-1"><%= t('nav.home', default: 'Home') %></span>
    <% end %>

    <%# Requests %>
    <%= link_to requests_path, class: "bottom-nav-item #{controller_name == 'requests' && action_name == 'index' ? 'active' : ''}" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <span class="text-xs mt-1"><%= t('nav.requests', default: 'Requests') %></span>
    <% end %>

    <% if user_signed_in? %>
      <%# Create Request (center button) %>
      <%= link_to new_request_path, class: "bottom-nav-create" do %>
        <div class="w-14 h-14 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-full flex items-center justify-center shadow-lg transform -translate-y-4 hover:scale-110 transition-transform">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
        </div>
      <% end %>

      <%# Messages %>
      <%= link_to conversations_path, class: "bottom-nav-item #{controller_name == 'conversations' ? 'active' : ''}" do %>
        <div class="relative">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <% unread_count = current_user.conversations.joins(:messages).where(messages: { read: false }).where.not(messages: { user_id: current_user.id }).distinct.count rescue 0 %>
          <% if unread_count > 0 %>
            <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-4 h-4 flex items-center justify-center"><%= unread_count > 9 ? '9+' : unread_count %></span>
          <% end %>
        </div>
        <span class="text-xs mt-1"><%= t('nav.messages', default: 'Messages') %></span>
      <% end %>

      <%# Profile %>
      <%= link_to user_path(current_user.username), class: "bottom-nav-item #{controller_name == 'users' && action_name == 'show' && @user == current_user ? 'active' : ''}" do %>
        <% if current_user.profile_picture.attached? %>
          <%= image_tag current_user.profile_picture.variant(:thumb), class: "w-6 h-6 rounded-full object-cover border border-gray-300 dark:border-gray-600" %>
        <% else %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        <% end %>
        <span class="text-xs mt-1"><%= t('nav.profile', default: 'Profile') %></span>
      <% end %>
    <% else %>
      <%# Empty center spacer when not signed in %>
      <div class="bottom-nav-item opacity-0 pointer-events-none">
        <div class="w-14 h-14"></div>
      </div>

      <%# Sign In %>
      <%= link_to new_user_session_path, class: "bottom-nav-item #{controller_name == 'sessions' ? 'active' : ''}" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
        </svg>
        <span class="text-xs mt-1"><%= t('nav.sign_in', default: 'Sign In') %></span>
      <% end %>

      <%# Sign Up %>
      <%= link_to new_user_registration_path, class: "bottom-nav-item #{controller_name == 'registrations' ? 'active' : ''}" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
        </svg>
        <span class="text-xs mt-1"><%= t('nav.sign_up', default: 'Sign Up') %></span>
      <% end %>
    <% end %>
  </div>
</nav>
