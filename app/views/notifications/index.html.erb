<div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-gray-100"><%= t("notifications.index.title") %></h1>

    <% if @notifications.unread.any? %>
      <%= button_to t("notifications.index.mark_all_read"),
          mark_all_as_read_notifications_path,
          method: :patch,
          class: "px-4 py-2 bg-blue-600 dark:bg-blue-700 text-white text-sm font-medium rounded-lg hover:bg-blue-700 dark:hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 transition-colors" %>
    <% end %>
  </div>

  <% if @notifications.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md divide-y divide-gray-200 dark:divide-gray-700 overflow-hidden">
      <% @notifications.each do |notification| %>
        <div class="relative p-4 group hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors <%= notification.unread? ? 'bg-blue-50 dark:bg-blue-900/20' : '' %>">

          <%= link_to mark_as_read_notification_path(notification),
              data: { turbo_method: :patch },
              class: "absolute inset-0 z-10",
              "aria-label": t("notifications.index.view_notification") do %>
            <span class="sr-only"><%= t("notifications.index.view_notification") %></span>
          <% end %>

          <div class="flex items-start relative z-20 pointer-events-none">
            <div class="flex-shrink-0">
              <% if notification.actor&.profile_picture&.attached? %>
                <%= image_tag notification.actor.avatar_url(size: :medium),
                    class: "h-12 w-12 rounded-full object-cover ring-2 ring-white dark:ring-gray-800",
                    alt: notification.actor.username %>
              <% else %>
                <div class="h-12 w-12 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-semibold text-lg ring-2 ring-white dark:ring-gray-800">
                  <%= notification.actor&.username&.first&.upcase || "?" %>
                </div>
              <% end %>
            </div>

            <div class="ml-4 flex-1 min-w-0">
              <p class="text-base text-gray-900 dark:text-gray-100 leading-relaxed">
                <%= notification.message %>
              </p>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                <%= l(notification.created_at, format: :long) %>
              </p>
            </div>

            <% if notification.unread? %>
              <div class="ml-4 flex-shrink-0" aria-label="Unread">
                <div class="h-3 w-3 bg-blue-600 rounded-full animate-pulse"></div>
              </div>
            <% end %>

            <div class="ml-4 flex-shrink-0 pointer-events-auto">
              <%= button_to notification_path(notification),
                  method: :delete,
                  data: { turbo_confirm: t("notifications.index.delete_confirm") },
                  class: "text-gray-400 dark:text-gray-500 hover:text-red-600 dark:hover:text-red-400 relative z-30 p-1 rounded-full hover:bg-red-50 dark:hover:bg-red-900/20 transition-colors",
                  "aria-label": t("notifications.index.delete_confirm") do %>
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-6">
      <%= paginate @notifications %>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-gray-300 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-gray-100"><%= t("notifications.index.no_notifications") %></h3>
      <p class="mt-2 text-sm text-gray-500 dark:text-gray-400"><%= t("notifications.index.no_notifications_text") %></p>
    </div>
  <% end %>
</div>
