<%= link_to mark_as_read_notification_path(notification),
    data: {
      turbo_method: :patch,
      notification_id: notification.id,
      url: notification.url,
      action: "click->notifications#markAsRead"
    },
    class: "block px-4 py-3 hover:bg-gray-50 dark:hover:bg-gray-700 border-b border-gray-100 dark:border-gray-700 #{notification.unread? ? 'bg-blue-50 dark:bg-blue-900/30' : ''}" do %>

  <div class="flex items-start">
    <!-- Avatar or icon -->
    <div class="flex-shrink-0">
      <% if notification.actor&.profile_picture&.attached? %>
        <%= image_tag notification.actor.avatar_url(size: :small),
            class: "h-10 w-10 rounded-full object-cover" %>
      <% elsif notification.actor %>
        <div class="h-10 w-10 rounded-full bg-gray-300 dark:bg-gray-600 flex items-center justify-center text-gray-600 dark:text-gray-300 font-semibold">
          <%= notification.actor.username[0].upcase %>
        </div>
      <% else %>
        <div class="h-10 w-10 rounded-full bg-emerald-100 dark:bg-emerald-900 flex items-center justify-center text-emerald-600 dark:text-emerald-400">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Content -->
    <div class="ml-3 flex-1">
      <p class="text-sm text-gray-900 dark:text-gray-100">
        <%= notification.message %>
      </p>
      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
        <%= time_ago_in_words(notification.created_at) %> <%= t('common.ago') %>
      </p>
    </div>

    <!-- Unread indicator -->
    <% if notification.unread? %>
      <div class="unread-indicator ml-2 flex-shrink-0">
        <div class="h-2 w-2 bg-blue-600 rounded-full"></div>
      </div>
    <% end %>
  </div>
<% end %>
