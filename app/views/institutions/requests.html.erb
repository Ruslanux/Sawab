<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <div class="bg-gradient-to-r from-emerald-600 to-teal-600 text-white py-8 shadow-lg">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-4 md:mb-0">
          <div class="flex items-center gap-2 mb-2">
            <%= link_to institution_path(@institution), class: "text-emerald-100 hover:text-white transition" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
            <% end %>
            <h1 class="text-3xl font-bold">
              <%= t('institutions.requests.title') %>
            </h1>
          </div>
          <p class="text-emerald-100">
            <%= @institution.name %>
          </p>
        </div>

        <% if policy(@institution).create_request? %>
          <%= link_to new_request_path(institution_id: @institution.id),
              class: "inline-flex items-center px-6 py-3 bg-white text-emerald-600 rounded-full font-bold hover:bg-emerald-50 transition-all shadow-lg" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <%= t('institutions.requests.create_new') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <% if @requests.any? %>
      <div class="space-y-4">
        <% @requests.each do |request| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md border border-gray-200 dark:border-gray-700 p-6 hover:shadow-lg transition">
            <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <%= link_to request_path(request), class: "text-xl font-bold text-gray-900 dark:text-gray-100 hover:text-emerald-600 dark:hover:text-emerald-400" do %>
                    <%= request.title %>
                  <% end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case request.status
                        when 'open' then 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200'
                        when 'in_progress' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200'
                        when 'completed' then 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200'
                        when 'cancelled' then 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200'
                        else 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200'
                        end %>">
                    <%= t("requests.statuses.#{request.status}") %>
                  </span>
                </div>

                <p class="text-gray-600 dark:text-gray-400 mb-3">
                  <%= truncate(request.description, length: 200) %>
                </p>

                <div class="flex flex-wrap items-center gap-4 text-sm text-gray-500 dark:text-gray-400">
                  <% if request.beneficiary_name.present? %>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                      <%= request.beneficiary_info %>
                    </span>
                  <% end %>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= time_ago_in_words(request.created_at) %> <%= t('common.ago') %>
                  </span>
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                    <%= request.offers_count %> <%= t('institutions.requests.offers') %>
                  </span>
                </div>
              </div>

              <div class="flex items-center gap-2">
                <%= link_to request_path(request),
                    class: "px-4 py-2 bg-emerald-600 text-white rounded-lg text-sm font-medium hover:bg-emerald-700 transition" do %>
                  <%= t('common.view') %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <% if @requests.total_pages > 1 %>
        <div class="mt-8 flex items-center justify-between">
          <div class="text-sm text-gray-700 dark:text-gray-300">
            <%= t('pagination.showing') %>
            <span class="font-medium"><%= @requests.offset_value + 1 %></span>
            <%= t('pagination.to') %>
            <span class="font-medium"><%= [@requests.offset_value + @requests.limit_value, @requests.total_count].min %></span>
            <%= t('pagination.of') %>
            <span class="font-medium"><%= @requests.total_count %></span>
          </div>
          <div class="flex space-x-2">
            <% if @requests.first_page? %>
              <span class="px-4 py-2 text-sm font-medium text-gray-400 dark:text-gray-500 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg cursor-not-allowed">
                <%= t('pagination.previous') %>
              </span>
            <% else %>
              <%= link_to t('pagination.previous'), institution_requests_path(@institution, page: @requests.current_page - 1),
                  class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" %>
            <% end %>

            <span class="px-4 py-2 text-sm font-medium text-white bg-emerald-600 dark:bg-emerald-700 border border-emerald-600 dark:border-emerald-700 rounded-lg">
              <%= @requests.current_page %> / <%= @requests.total_pages %>
            </span>

            <% if @requests.last_page? %>
              <span class="px-4 py-2 text-sm font-medium text-gray-400 dark:text-gray-500 bg-gray-100 dark:bg-gray-700 border border-gray-200 dark:border-gray-600 rounded-lg cursor-not-allowed">
                <%= t('pagination.next') %>
              </span>
            <% else %>
              <%= link_to t('pagination.next'), institution_requests_path(@institution, page: @requests.current_page + 1),
                  class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-12 text-center border border-gray-200 dark:border-gray-700">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <h3 class="text-xl font-medium text-gray-900 dark:text-gray-100 mb-2">
          <%= t('institutions.requests.no_requests') %>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-6">
          <%= t('institutions.requests.no_requests_description') %>
        </p>
        <% if policy(@institution).create_request? %>
          <%= link_to new_request_path(institution_id: @institution.id),
              class: "inline-flex items-center px-6 py-3 bg-emerald-600 text-white rounded-lg font-medium hover:bg-emerald-700 transition" do %>
            <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <%= t('institutions.requests.create_first') %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
