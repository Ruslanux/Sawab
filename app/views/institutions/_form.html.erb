<%= form_with model: institution, local: true, class: "space-y-6" do |f| %>
  <% if institution.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= t('errors.template.header', count: institution.errors.count) %>
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-300 list-disc list-inside">
            <% institution.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Basic Info -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
    <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6">
      <%= t('institutions.form.basic_info') %>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="md:col-span-2">
        <%= f.label :name, t('institutions.form.name'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :name,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: t('institutions.form.name_placeholder'),
            required: true %>
      </div>

      <div>
        <%= f.label :institution_type, t('institutions.form.type'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :institution_type,
            Institution.institution_types.keys.map { |type| [t("institutions.types.#{type}"), type] },
            {},
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white" %>
      </div>

      <div>
        <%= f.label :director_name, t('institutions.form.director_name'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :director_name,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: t('institutions.form.director_name_placeholder'),
            required: true %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :description, t('institutions.form.description'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_area :description,
            rows: 4,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: t('institutions.form.description_placeholder') %>
      </div>
    </div>
  </div>

  <!-- Address -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
    <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6">
      <%= t('institutions.form.address_section') %>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :region, t('institutions.form.region'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.select :region,
            I18n.t('regions').map { |k, v| [v, k] },
            { include_blank: t('institutions.form.select_region') },
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            required: true %>
      </div>

      <div>
        <%= f.label :city, t('institutions.form.city'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :city,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: t('institutions.form.city_placeholder'),
            required: true %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :address, t('institutions.form.address'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :address,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: t('institutions.form.address_placeholder'),
            required: true %>
      </div>
    </div>
  </div>

  <!-- Contact Info -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
    <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6">
      <%= t('institutions.form.contact_section') %>
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= f.label :phone, t('institutions.form.phone'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :phone,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: "+7 (XXX) XXX-XX-XX",
            required: true %>
      </div>

      <div>
        <%= f.label :email, t('institutions.form.email'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.email_field :email,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: "email@example.com" %>
      </div>

      <div class="md:col-span-2">
        <%= f.label :website, t('institutions.form.website'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.url_field :website,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: "https://example.com" %>
      </div>
    </div>
  </div>

  <% if institution.new_record? %>
    <!-- Creator Position -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-6">
        <%= t('institutions.form.your_info') %>
      </h2>

      <div>
        <%= f.label :creator_position, t('institutions.form.your_position'), class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.text_field :creator_position,
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-emerald-500 dark:bg-gray-700 dark:text-white",
            placeholder: t('institutions.form.position_placeholder') %>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          <%= t('institutions.form.position_hint') %>
        </p>
      </div>
    </div>

    <!-- Verification Notice -->
    <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">
            <%= t('institutions.form.verification_notice_title') %>
          </h3>
          <p class="mt-1 text-sm text-yellow-700 dark:text-yellow-300">
            <%= t('institutions.form.verification_notice_text') %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Submit -->
  <div class="flex flex-col-reverse sm:flex-row sm:justify-end gap-3 sm:gap-4">
    <%= link_to t('common.cancel'), institutions_path,
        class: "w-full sm:w-auto text-center px-6 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-700 transition" %>
    <%= f.submit institution.new_record? ? t('institutions.form.create') : t('institutions.form.update'),
        class: "w-full sm:w-auto px-6 py-2 bg-emerald-600 text-white rounded-lg font-medium hover:bg-emerald-700 transition cursor-pointer" %>
  </div>
<% end %>
