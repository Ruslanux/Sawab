<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Header -->
  <div class="bg-gradient-to-r from-emerald-600 to-teal-600 text-white py-8 shadow-lg">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <h1 class="text-3xl md:text-4xl font-bold"><%= @institution.name %></h1>
            <% if @institution.verified? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/20 text-white">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                <%= t('institutions.verified') %>
              </span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-500/20 text-yellow-100">
                <%= t('institutions.pending_verification') %>
              </span>
            <% end %>
          </div>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-white/20">
            <%= t("institutions.types.#{@institution.institution_type}") %>
          </span>
        </div>

        <div class="flex gap-3">
          <% if policy(@institution).edit? %>
            <%= link_to edit_institution_path(@institution),
                class: "inline-flex items-center px-4 py-2 bg-white/20 text-white rounded-lg font-medium hover:bg-white/30 transition" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              <%= t('institutions.edit_button') %>
            <% end %>
          <% end %>

          <% if policy(@institution).manage_members? %>
            <%= link_to institution_institution_members_path(@institution),
                class: "inline-flex items-center px-4 py-2 bg-white/20 text-white rounded-lg font-medium hover:bg-white/30 transition" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              <%= t('institutions.manage_members') %>
            <% end %>
          <% end %>

          <% if policy(@institution).create_request? %>
            <%= link_to new_request_path(institution_id: @institution.id),
                class: "inline-flex items-center px-4 py-2 bg-white text-emerald-600 rounded-lg font-medium hover:bg-emerald-50 transition" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              <%= t('institutions.create_request') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        <% if @institution.description.present? %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
            <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
              <%= t('institutions.about') %>
            </h2>
            <p class="text-gray-600 dark:text-gray-400 whitespace-pre-line">
              <%= @institution.description %>
            </p>
          </div>
        <% end %>

        <!-- Open Requests -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100">
              <%= t('institutions.open_requests') %>
            </h2>
            <%= link_to requests_institution_path(@institution),
                class: "text-sm text-emerald-600 dark:text-emerald-400 hover:underline" do %>
              <%= t('institutions.view_all_requests') %>
            <% end %>
          </div>

          <% if @requests.any? %>
            <div class="space-y-4">
              <% @requests.each do |request| %>
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition">
                  <div class="flex items-start justify-between">
                    <div>
                      <%= link_to request_path(request), class: "text-lg font-medium text-gray-900 dark:text-gray-100 hover:text-emerald-600 dark:hover:text-emerald-400" do %>
                        <%= request.title %>
                      <% end %>
                      <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
                        <%= truncate(request.description, length: 100) %>
                      </p>
                      <% if request.beneficiary_name.present? %>
                        <p class="text-sm text-emerald-600 dark:text-emerald-400 mt-2">
                          <%= t('institutions.beneficiary') %>: <%= request.beneficiary_info %>
                        </p>
                      <% end %>
                    </div>
                    <span class="text-sm text-gray-500 dark:text-gray-400 whitespace-nowrap ml-4">
                      <%= time_ago_in_words(request.created_at) %> <%= t('common.ago') %>
                    </span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 dark:text-gray-400 text-center py-8">
              <%= t('institutions.no_open_requests') %>
            </p>
          <% end %>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Contact Info -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            <%= t('institutions.contact_info') %>
          </h2>

          <div class="space-y-4">
            <div class="flex items-start">
              <svg class="w-5 h-5 mr-3 text-emerald-600 dark:text-emerald-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= t('institutions.address') %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= @institution.full_address %></p>
              </div>
            </div>

            <div class="flex items-start">
              <svg class="w-5 h-5 mr-3 text-emerald-600 dark:text-emerald-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= t('institutions.phone') %></p>
                <a href="tel:<%= @institution.phone %>" class="text-sm text-emerald-600 dark:text-emerald-400 hover:underline">
                  <%= @institution.phone %>
                </a>
              </div>
            </div>

            <% if @institution.email.present? %>
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-3 text-emerald-600 dark:text-emerald-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= t('institutions.email') %></p>
                  <a href="mailto:<%= @institution.email %>" class="text-sm text-emerald-600 dark:text-emerald-400 hover:underline">
                    <%= @institution.email %>
                  </a>
                </div>
              </div>
            <% end %>

            <% if @institution.website.present? %>
              <div class="flex items-start">
                <svg class="w-5 h-5 mr-3 text-emerald-600 dark:text-emerald-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= t('institutions.website') %></p>
                  <a href="<%= @institution.website %>" target="_blank" rel="noopener" class="text-sm text-emerald-600 dark:text-emerald-400 hover:underline">
                    <%= @institution.website %>
                  </a>
                </div>
              </div>
            <% end %>

            <div class="flex items-start">
              <svg class="w-5 h-5 mr-3 text-emerald-600 dark:text-emerald-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <div>
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= t('institutions.director') %></p>
                <p class="text-sm text-gray-600 dark:text-gray-400"><%= @institution.director_name %></p>
              </div>
            </div>
          </div>
        </div>

        <!-- Representatives -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 border border-gray-200 dark:border-gray-700">
          <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
            <%= t('institutions.representatives') %>
          </h2>

          <div class="space-y-3">
            <% @members.representatives.limit(5).each do |member| %>
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-emerald-100 dark:bg-emerald-900 flex items-center justify-center text-emerald-600 dark:text-emerald-400 font-medium mr-3">
                  <%= member.user.username[0].upcase %>
                </div>
                <div>
                  <%= link_to user_path(username: member.user.username), class: "text-sm font-medium text-gray-900 dark:text-gray-100 hover:text-emerald-600 dark:hover:text-emerald-400" do %>
                    <%= member.user.username %>
                  <% end %>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= member.position.presence || t("institution_members.roles.#{member.role}") %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
