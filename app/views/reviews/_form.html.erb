<%= form_with(model: [ request, review ], class: "space-y-4") do |f| %>
  <% if review.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/30 border-l-4 border-red-400 dark:border-red-500 p-4 mb-4">
      <h2 class="font-bold text-red-800 dark:text-red-300">Обнаружены ошибки:</h2>
      <ul class="list-disc list-inside text-sm text-red-700 dark:text-red-400">
        <% review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p class="mb-2 font-medium text-gray-700 dark:text-gray-300">Ваша оценка для <%= reviewee.username %>:</p>

    <div class="flex items-center" data-controller="star-rating">
      <div class="flex gap-1">
        <% (1..5).each do |star| %>
          <label class="cursor-pointer star-label" data-star-rating-target="star" data-value="<%= star %>">
            <%= f.radio_button :rating, star,
                class: "sr-only",
                data: {
                  action: "change->star-rating#updateStars",
                  star_rating_target: "input"
                } %>
            <svg class="h-8 w-8 transition-colors text-gray-300 dark:text-gray-500 hover:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          </label>
        <% end %>
      </div>
    </div>
  </div>

  <div>
    <%= f.label :comment, "Комментарий (необязательно)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= f.text_area :comment, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= f.submit "Оставить отзыв", class: "px-4 py-2 bg-indigo-600 dark:bg-indigo-700 text-white rounded-md hover:bg-indigo-700 dark:hover:bg-indigo-600 cursor-pointer" %>
  </div>
<% end %>
