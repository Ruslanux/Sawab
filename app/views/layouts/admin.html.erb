<!DOCTYPE html>
<html class="h-full">
  <head>
    <title>Admin Panel - <%= content_for(:title) || "Sawab" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="icon" href="/favicon.svg" type="image/svg+xml">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script nonce="<%= content_security_policy_nonce %>">
      // Apply dark mode immediately to prevent flash of wrong theme
      (function() {
        const savedTheme = localStorage.getItem("theme");
        const systemPrefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        if (savedTheme === "dark" || (!savedTheme && systemPrefersDark)) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="/dark-mode.css?v=20">
    <%= javascript_importmap_tags %>
    <%= javascript_import_module_tag "application" %>
  </head>

  <body class="bg-gray-100 dark:bg-gray-900 h-full" data-controller="admin-sidebar">
    <div class="h-full flex">
      <!-- Mobile sidebar overlay -->
      <div data-admin-sidebar-target="overlay"
           data-action="click->admin-sidebar#clickOutside"
           class="fixed inset-0 bg-gray-900/50 z-40 md:hidden hidden"
           aria-hidden="true"></div>

      <!-- Sidebar -->
      <div data-admin-sidebar-target="sidebar"
           class="fixed inset-y-0 left-0 z-50 w-64 bg-gray-900 dark:bg-gray-950 transform -translate-x-full md:translate-x-0 md:static md:inset-auto transition-transform duration-300 ease-in-out flex flex-col">

        <!-- Logo -->
        <div class="flex items-center h-16 flex-shrink-0 px-4 bg-gray-800">
          <%= link_to admin_root_path, class: "flex items-center" do %>
            <span class="text-2xl font-bold text-white">Sawab</span>
            <span class="ml-2 px-2 py-1 text-xs font-semibold text-gray-900 bg-yellow-400 rounded">ADMIN</span>
          <% end %>
        </div>

        <!-- Navigation -->
        <div class="flex-1 flex flex-col overflow-y-auto">
          <nav class="flex-1 px-2 py-4 space-y-1" aria-label="Admin navigation">
            <%= link_to admin_root_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_root_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_root_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Dashboard
            <% end %>

            <%= link_to admin_users_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_users_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_users_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Users
            <% end %>

            <%= link_to admin_requests_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_requests_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_requests_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Requests
            <% end %>

            <%= link_to admin_offers_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_offers_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_offers_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              Offers
            <% end %>

            <%= link_to admin_reports_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_reports_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_reports_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              Reports
              <% if Report.pending.count > 0 %>
                <span class="ml-auto inline-flex items-center justify-center py-0.5 px-2 text-xs font-medium rounded-full bg-red-600 text-white">
                  <%= Report.pending.count %>
                </span>
              <% end %>
            <% end %>

            <%= link_to admin_requests_path(status: 'disputed'), class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{params[:status] == 'disputed' ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}" do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.546-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Disputes
              <% disputed_count = Request.where(status: 'disputed').count %>
              <% if disputed_count > 0 %>
                <span class="ml-auto inline-flex items-center justify-center py-0.5 px-2 text-xs font-medium rounded-full bg-red-600 text-white">
                  <%= disputed_count %>
                </span>
              <% end %>
            <% end %>

            <%= link_to admin_admin_messages_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_admin_messages_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_admin_messages_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Messages
            <% end %>

            <%= link_to admin_categories_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_categories_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_categories_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              Categories
            <% end %>

            <%= link_to admin_badges_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{current_page?(admin_badges_path) ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": current_page?(admin_badges_path) ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
              </svg>
              Badges
            <% end %>

            <%= link_to admin_institutions_path, class: "group flex items-center px-3 py-2.5 text-sm font-medium rounded-lg transition-colors #{request.path.include?('institutions') ? 'bg-gray-800 text-white' : 'text-gray-300 hover:bg-gray-800 hover:text-white'}", "aria-current": request.path.include?('institutions') ? "page" : nil do %>
              <svg class="mr-3 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              Institutions
              <% pending_institutions = Institution.pending_verification.count %>
              <% if pending_institutions > 0 %>
                <span class="ml-auto inline-flex items-center justify-center py-0.5 px-2 text-xs font-medium rounded-full bg-yellow-600 text-white">
                  <%= pending_institutions %>
                </span>
              <% end %>
            <% end %>
          </nav>
        </div>

        <!-- User info -->
        <div class="flex-shrink-0 flex border-t border-gray-800 p-4">
          <div class="flex items-center w-full">
            <div class="flex-shrink-0">
              <div class="h-10 w-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                <span class="text-white font-semibold text-sm">
                  <%= current_user.username[0].upcase %>
                </span>
              </div>
            </div>
            <div class="ml-3 flex-1 min-w-0">
              <p class="text-sm font-medium text-white truncate"><%= current_user.username %></p>
              <p class="text-xs text-gray-400 capitalize"><%= current_user.role %></p>
            </div>
            <%= button_to destroy_user_session_path,
                method: :delete,
                class: "ml-2 p-1.5 text-gray-400 hover:text-white hover:bg-gray-800 rounded-lg transition-colors",
                form: { class: "inline-block" },
                title: "Sign Out",
                "aria-label": "Sign Out" do %>
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Main content -->
      <div class="flex-1 flex flex-col min-w-0 overflow-hidden">
        <!-- Top bar -->
        <div class="relative z-10 flex-shrink-0 flex h-16 bg-white dark:bg-gray-800 shadow">
          <!-- Mobile menu button -->
          <button type="button"
                  data-action="click->admin-sidebar#toggle"
                  class="md:hidden px-4 text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500"
                  aria-label="Toggle navigation menu">
            <span class="sr-only">Open sidebar</span>
            <!-- Hamburger icon -->
            <svg data-admin-sidebar-target="openIcon" class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <!-- Close icon -->
            <svg data-admin-sidebar-target="closeIcon" class="h-6 w-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>

          <div class="flex-1 px-4 flex justify-between items-center">
            <h1 class="text-xl md:text-2xl font-semibold text-gray-900 dark:text-gray-100 truncate">
              <%= content_for(:page_title) || 'Dashboard' %>
            </h1>

            <div class="ml-4 flex items-center space-x-2 sm:space-x-4">
              <!-- Dark mode toggle -->
              <%= render 'shared/dark_mode_toggle' %>

              <%= link_to root_path, class: "inline-flex items-center text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-gray-100 text-sm font-medium transition-colors" do %>
                <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                <span class="hidden sm:inline">Back to Site</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Flash messages -->
        <% if flash.any? %>
          <div class="px-4 py-2 space-y-2">
            <% flash.each do |key, value| %>
              <div class="rounded-lg p-4 <%= key == 'notice' ? 'bg-green-50 dark:bg-green-900/30 text-green-800 dark:text-green-200' : 'bg-red-50 dark:bg-red-900/30 text-red-800 dark:text-red-200' %>" role="alert">
                <%= value %>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Main content area -->
        <main class="flex-1 relative overflow-y-auto focus:outline-none">
          <div class="py-6">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
              <%= yield %>
            </div>
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
