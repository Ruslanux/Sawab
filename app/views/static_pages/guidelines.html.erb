<% content_for(:title) { t('static_pages.guidelines.title') } %>

<div class="max-w-4xl mx-auto">
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 md:p-12">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4 text-center">
      <%= t('static_pages.guidelines.title') %>
    </h1>
    <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 text-center">
      <%= t('static_pages.guidelines.subtitle') %>
    </p>

    <!-- For Askers Section -->
    <div class="mb-10">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/50 rounded-full flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          <%= t('static_pages.guidelines.for_askers.title') %>
        </h2>
      </div>

      <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-6 mb-6">
        <h3 class="text-lg font-semibold text-blue-800 dark:text-blue-300 mb-3">
          <%= t('static_pages.guidelines.for_askers.principle') %>
        </h3>
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          <%= t('static_pages.guidelines.for_askers.principle_description') %>
        </p>
      </div>

      <h4 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-4">
        <%= t('static_pages.guidelines.for_askers.examples_title') %>
      </h4>

      <div class="space-y-4">
        <% %w[transport physical medical household].each do |example| %>
          <div class="border-l-4 border-blue-500 pl-4 py-2">
            <p class="font-medium text-gray-900 dark:text-gray-100 mb-1">
              <%= t("static_pages.guidelines.for_askers.examples.#{example}.category") %>
            </p>
            <p class="text-green-600 dark:text-green-400 text-sm mb-1">
              <span class="font-medium"><%= t('static_pages.guidelines.correct') %>:</span>
              <%= t("static_pages.guidelines.for_askers.examples.#{example}.correct") %>
            </p>
            <p class="text-red-600 dark:text-red-400 text-sm">
              <span class="font-medium"><%= t('static_pages.guidelines.incorrect') %>:</span>
              <%= t("static_pages.guidelines.for_askers.examples.#{example}.incorrect") %>
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700 my-10"></div>

    <!-- For Helpers Section -->
    <div class="mb-10">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-green-100 dark:bg-green-900/50 rounded-full flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          <%= t('static_pages.guidelines.for_helpers.title') %>
        </h2>
      </div>

      <div class="bg-green-50 dark:bg-green-900/20 rounded-xl p-6 mb-6">
        <h3 class="text-lg font-semibold text-green-800 dark:text-green-300 mb-3">
          <%= t('static_pages.guidelines.for_helpers.principle') %>
        </h3>
        <p class="text-gray-700 dark:text-gray-300">
          <%= t('static_pages.guidelines.for_helpers.principle_description') %>
        </p>
      </div>

      <div class="bg-amber-50 dark:bg-amber-900/20 rounded-xl p-6">
        <h3 class="text-lg font-semibold text-amber-800 dark:text-amber-300 mb-3">
          <%= t('static_pages.guidelines.for_helpers.dont_chase_points') %>
        </h3>
        <ul class="space-y-2 text-gray-700 dark:text-gray-300">
          <% (1..4).each do |i| %>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-amber-500 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              <%= t("static_pages.guidelines.for_helpers.warnings.warning_#{i}") %>
            </li>
          <% end %>
        </ul>
        <p class="mt-4 text-amber-800 dark:text-amber-300 font-medium">
          <%= t('static_pages.guidelines.for_helpers.quality_over_quantity') %>
        </p>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700 my-10"></div>

    <!-- Safety Section -->
    <div class="mb-10">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-red-100 dark:bg-red-900/50 rounded-full flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          <%= t('static_pages.guidelines.safety.title') %>
        </h2>
      </div>

      <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
        <%= t('static_pages.guidelines.safety.priority') %>
      </p>

      <div class="grid md:grid-cols-2 gap-4">
        <% (1..6).each do |i| %>
          <div class="flex items-start bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
            <div class="w-8 h-8 bg-red-100 dark:bg-red-900/50 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
              <span class="text-red-600 dark:text-red-400 font-bold text-sm"><%= i %></span>
            </div>
            <div>
              <p class="font-medium text-gray-900 dark:text-gray-100">
                <%= t("static_pages.guidelines.safety.rules.rule_#{i}.title") %>
              </p>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                <%= t("static_pages.guidelines.safety.rules.rule_#{i}.description") %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-gray-200 dark:border-gray-700 my-10"></div>

    <!-- Spiritual Message Section -->
    <div class="mb-8">
      <div class="flex items-center mb-4">
        <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/50 rounded-full flex items-center justify-center mr-4">
          <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
          <%= t('static_pages.guidelines.meaning.title') %>
        </h2>
      </div>

      <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl p-6 mb-6">
        <p class="text-gray-700 dark:text-gray-300 mb-4">
          <%= t('static_pages.guidelines.meaning.paragraph_1') %>
        </p>
        <p class="text-gray-700 dark:text-gray-300">
          <%= t('static_pages.guidelines.meaning.paragraph_2') %>
        </p>
      </div>

      <blockquote class="border-l-4 border-indigo-500 pl-6 py-4 bg-indigo-50 dark:bg-indigo-900/30 rounded-r-xl mb-6">
        <p class="text-xl italic text-indigo-800 dark:text-indigo-300 mb-2">
          <%= t('static_pages.guidelines.meaning.quran_quote') %>
        </p>
        <footer class="text-indigo-600 dark:text-indigo-400 font-medium">
          <%= t('static_pages.guidelines.meaning.quran_source') %>
        </footer>
      </blockquote>

      <div class="bg-gray-50 dark:bg-gray-700/50 rounded-xl p-6 text-center">
        <p class="text-gray-700 dark:text-gray-300 mb-2">
          <%= t('static_pages.guidelines.meaning.conclusion') %>
        </p>
        <p class="text-lg font-semibold text-indigo-600 dark:text-indigo-400">
          <%= t('static_pages.guidelines.meaning.call_to_action') %>
        </p>
      </div>
    </div>

    <!-- Back to requests -->
    <div class="text-center mt-10">
      <%= link_to requests_path, class: "inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-lg transition shadow-lg hover:shadow-xl" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        <%= t('static_pages.guidelines.back_to_requests') %>
      <% end %>
    </div>
  </div>
</div>
