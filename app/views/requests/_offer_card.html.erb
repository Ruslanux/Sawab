<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md border border-gray-200 dark:border-gray-700 hover:shadow-lg transition-all overflow-hidden group"
     data-controller="animate"
     data-animate-class-value="animate-fade-in-up"
     data-animate-threshold-value="0.05">
  <div class="p-5">
    <!-- Header with Status Badge -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1 pr-4">
        <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-2">
          <%= t('requests.card.offer_on') %> <%= link_to offer.request.title, request_path(offer.request), class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 hover:underline line-clamp-2" %>
        </h3>

        <%= render 'shared/status_badge', status: offer.status, type: :offer %>
      </div>
    </div>

    <!-- Offer Message -->
    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 mb-4 border border-gray-200 dark:border-gray-600">
      <p class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2 flex items-center">
        <svg class="w-4 h-4 mr-1 text-indigo-500 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
        <%= t('requests.card.your_message') %>
      </p>
      <p class="text-gray-700 dark:text-gray-300 text-sm line-clamp-3">
        <%= offer.message %>
      </p>
    </div>

    <!-- Request Info -->
    <div class="bg-indigo-50 dark:bg-indigo-900/30 rounded-lg p-4 mb-4 border border-indigo-100 dark:border-indigo-800">
      <p class="text-sm font-semibold text-indigo-900 dark:text-indigo-300 mb-2 flex items-center">
        <svg class="w-4 h-4 mr-1 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <%= t('requests.card.original_request') %>
      </p>
      <p class="text-gray-700 dark:text-gray-300 text-sm line-clamp-2">
        <%= offer.request.description %>
      </p>
    </div>

    <!-- Metadata -->
    <div class="flex flex-wrap gap-3 text-sm text-gray-600 dark:text-gray-400 mb-4">
      <%= render 'shared/metadata_item', icon: :user, text: "#{t('requests.card.request_by')} #{offer.request.user.username}" %>
      <%= render 'shared/metadata_item', icon: :clock, text: "#{t('requests.card.sent')} #{time_ago_in_words(offer.created_at)} #{t('requests.card.ago')}" %>
      <%= category_badge(offer.request.category.name, size: :small) %>
    </div>

    <!-- Status Message -->
    <% if offer.accepted? %>
      <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-700 rounded-lg p-4 mb-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-green-600 dark:text-green-400 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-green-900 dark:text-green-300"><%= t('requests.card.accepted_title') %></p>
            <p class="text-sm text-green-700 dark:text-green-400"><%= t('requests.card.accepted_text') %></p>
          </div>
        </div>
      </div>
    <% elsif offer.rejected? %>
      <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-700 rounded-lg p-4 mb-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-red-600 dark:text-red-400 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-red-900 dark:text-red-300"><%= t('requests.card.rejected_title') %></p>
            <p class="text-sm text-red-700 dark:text-red-400"><%= t('requests.card.rejected_text') %></p>
          </div>
        </div>
      </div>
    <% elsif offer.pending? %>
      <div class="bg-yellow-50 dark:bg-yellow-900/30 border border-yellow-200 dark:border-yellow-700 rounded-lg p-4 mb-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <p class="text-sm font-semibold text-yellow-900 dark:text-yellow-300"><%= t('requests.card.pending_title') %></p>
            <p class="text-sm text-yellow-700 dark:text-yellow-400"><%= t('requests.card.pending_text') %></p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Footer Actions -->
    <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700">
      <div class="flex gap-2">
        <%= link_to request_path(offer.request),
            class: "inline-flex items-center px-4 py-2 bg-indigo-600 dark:bg-indigo-700 text-white text-sm font-medium rounded-lg hover:bg-indigo-700 dark:hover:bg-indigo-600 transition-all shadow hover:shadow-md" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
          </svg>
          <%= t('requests.card.view_request') %>
        <% end %>
      </div>

      <% if offer.pending? && offer.editable_by?(current_user) %>
        <%= link_to request_path(offer.request),
            data: { turbo_method: :delete, turbo_confirm: t('requests.card.delete_confirm') },
            class: "inline-flex items-center px-4 py-2 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 text-sm font-medium rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-all" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
          <%= t('requests.card.delete') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Hover Effect Border -->
  <div class="h-1 bg-gradient-to-r from-green-500 via-teal-500 to-blue-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
</div>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>
