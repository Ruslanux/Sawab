<div class="flex items-start justify-between mb-4">
  <div class="flex-1">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-3"><%= request.title %></h1>

    <div class="flex flex-wrap gap-3 text-sm text-gray-600 dark:text-gray-400">
      <%= category_badge(request.category.name) %>

      <div class="flex items-center">
        <%= icon_tag(:user, class: "h-5 w-5 text-gray-400 dark:text-gray-500 mr-1") %>
        <span class="font-medium"><%= t('requests.show.posted_by') %></span>
        <%= link_to request.user.username, user_path(request.user.username), class: "text-indigo-600 dark:text-indigo-400 hover:underline" %>
      </div>

      <div class="flex items-center">
        <%= icon_tag(:clock, class: "h-5 w-5 text-gray-400 dark:text-gray-500 mr-1") %>
        <span><%= time_ago_in_words(request.created_at) %> <%= t('requests.show.ago') %></span>
      </div>

      <% if request.region.present? || request.city.present? %>
        <div class="flex items-center">
          <%= icon_tag(:location, class: "h-5 w-5 text-gray-400 dark:text-gray-500 mr-1") %>
          <span><%= request.location_display %></span>
        </div>
      <% end %>
    </div>
  </div>

  <%= render 'shared/status_badge', status: request.status, type: :request %>
</div>
