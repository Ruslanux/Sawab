<div class="flex items-center gap-2 mt-6 pt-4 border-t border-gray-200 dark:border-gray-700">
  <%# Complete or Mark Pending buttons %>
  <% if policy(request).complete? %>
    <% accepted_offer = request.offers.find_by(status: 'accepted') %>
    <% if accepted_offer %>
      <%= button_to complete_request_path(request),
          method: :patch,
          data: {
            turbo_confirm: t('requests.show.complete_confirm', helper: accepted_offer.user.username)
          },
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition shadow-sm" do %>
        <%= icon_tag(:check_circle, class: "h-5 w-5 mr-2") %>
        <%= t('requests.show.complete_request') %>
      <% end %>
    <% end %>
  <% elsif policy(request).mark_pending_completion? %>
    <%= button_to mark_pending_completion_request_path(request),
        method: :patch,
        data: {
          turbo_confirm: t('requests.show.mark_pending_confirm')
        },
        class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition shadow-sm" do %>
      <%= icon_tag(:clock, class: "h-5 w-5 mr-2") %>
      <%= t('requests.show.mark_pending') %>
    <% end %>
  <% end %>

  <%# Status messages %>
  <% if request.pending_completion? %>
    <span class="text-sm text-yellow-700 dark:text-yellow-400 font-medium">
      <%= t('requests.show.pending_completion_msg', username: request.user.username) %>
    </span>
  <% elsif request.disputed? %>
    <span class="text-sm text-red-700 dark:text-red-400 font-medium">
      <%= t('requests.show.disputed_msg') %>
    </span>
  <% end %>

  <%# Edit button %>
  <% if policy(request).edit? %>
    <%= link_to edit_request_path(request),
        class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition" do %>
      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      <%= t('requests.show.edit') %>
    <% end %>
  <% end %>

  <%# Delete button %>
  <% if policy(request).destroy? %>
    <%= button_to request_path(request),
        method: :delete,
        data: { turbo_confirm: t('requests.show.delete_confirm') },
        class: "inline-flex items-center px-3 py-2 border border-red-300 dark:border-red-600 text-sm font-medium rounded-md text-red-700 dark:text-red-400 bg-white dark:bg-gray-700 hover:bg-red-50 dark:hover:bg-red-900/30 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition" do %>
      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
      <%= t('requests.show.delete') %>
    <% end %>
  <% end %>

  <%# Back link %>
  <%= link_to requests_path, class: "ml-auto text-sm text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200 transition" do %>
    <%= t('requests.show.back_to_all') %>
  <% end %>
</div>

<%# Report link %>
<% if user_signed_in? && request.user != current_user && !request.completed? && !request.cancelled? %>
  <div class="mt-4 text-right">
    <%= link_to new_report_path(reportable_type: 'Request', reportable_id: request.id),
        class: "text-xs text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition hover:underline" do %>
      <svg class="h-3 w-3 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6H5a2 2 0 00-2 2zm0 0h18"></path>
      </svg>
      <%= t('requests.show.report_request') %>
    <% end %>
  </div>
<% end %>
