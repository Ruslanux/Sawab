<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Hero Section with Pattern -->
  <div class="relative overflow-hidden bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500 text-white py-16 shadow-2xl">
    <!-- Animated Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="hero-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <circle cx="20" cy="20" r="2" fill="white"/>
            <circle cx="0" cy="0" r="1" fill="white"/>
            <circle cx="40" cy="40" r="1" fill="white"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#hero-pattern)"/>
      </svg>
    </div>

    <!-- Decorative Floating Shapes -->
    <div class="absolute top-0 left-0 w-72 h-72 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 w-96 h-96 bg-pink-500/20 rounded-full translate-x-1/3 translate-y-1/2 blur-3xl"></div>
    <div class="absolute top-1/2 left-1/4 w-32 h-32 bg-indigo-400/20 rounded-full blur-2xl hero-float"></div>
    <div class="absolute top-1/4 right-1/4 w-24 h-24 bg-purple-400/20 rounded-full blur-2xl hero-float-delayed"></div>

    <!-- Decorative Icons -->
    <div class="absolute top-8 right-12 opacity-20 hidden md:block">
      <svg class="w-16 h-16 hero-float" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
    </div>
    <div class="absolute bottom-12 left-16 opacity-20 hidden md:block">
      <svg class="w-12 h-12 hero-float-delayed" fill="currentColor" viewBox="0 0 24 24">
        <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
      </svg>
    </div>
    <div class="absolute top-1/2 right-8 opacity-15 hidden lg:block">
      <svg class="w-20 h-20 hero-float" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
      </svg>
    </div>

    <div class="container mx-auto px-4 relative z-10">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="mb-6 md:mb-0 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 drop-shadow-lg">
            <% if @type == 'requests' %>
              <%= t('requests.index.title') %>
            <% else %>
              <%= t('requests.index.my_offers_title') %>
            <% end %>
          </h1>
          <p class="text-xl md:text-2xl text-indigo-100 max-w-xl">
            <% if @type == 'requests' %>
              <%= t('requests.index.subtitle') %>
            <% else %>
              <%= t('requests.index.my_offers_subtitle') %>
            <% end %>
          </p>
        </div>

        <% if user_signed_in? && @type == 'requests' && policy(Request.new).create? %>
          <%= link_to new_request_path,
              class: "group inline-flex items-center px-8 py-4 bg-white text-indigo-600 rounded-full font-bold hover:bg-indigo-50 transition-all shadow-xl hover:shadow-2xl transform hover:scale-105 hover:-translate-y-1" do %>
            <svg class="h-6 w-6 mr-2 group-hover:rotate-90 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            <%= t('requests.index.create_new') %>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Bottom Wave -->
    <div class="absolute bottom-0 left-0 right-0">
      <svg class="w-full h-8 md:h-12" viewBox="0 0 1200 120" preserveAspectRatio="none">
        <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V120H0V95.8C59.71,118.11,143.53,111.44,221.36,91.71,286.82,75.33,276.94,68.54,321.39,56.44Z" fill="rgb(249 250 251)" class="dark:fill-gray-900"></path>
      </svg>
    </div>
  </div>

  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-6">
      <!-- Filters Sidebar -->
      <aside class="lg:w-1/4">
        <%= render 'filters' %>
      </aside>

      <!-- Main Content -->
      <main class="lg:w-3/4">
        <!-- Results Header -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6 mb-6 border border-gray-200 dark:border-gray-700">
          <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-4">
            <div>
              <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-1">
                <% if @type == 'requests' %>
                  <%= t('requests.index.requests_count', count: @stats[:total]) %>
                <% else %>
                  <%= t('requests.index.offers_count', count: @stats[:total]) %>
                <% end %>
              </h2>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                <% if params[:q].present? %>
                  <%= t('requests.index.search_results', query: params[:q]) %>
                <% elsif @status.present? %>
                  <%= t('requests.index.status_filter', status: @status.titleize) %>
                <% else %>
                  <%= t('requests.index.showing_all') %>
                <% end %>
              </p>
            </div>

            <!-- Sort Options -->
            <div class="flex items-center gap-2">
              <label class="text-sm font-medium text-gray-700 dark:text-gray-300"><%= t('requests.index.sort_by') %></label>
              <div class="flex gap-2">
                <%= link_to requests_path(params.to_unsafe_h.merge('sort' => 'recent')),
                    class: "flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-all #{params[:sort] != 'oldest' ? 'bg-indigo-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"/>
                  </svg>
                  <%= t('requests.index.recent') %>
                <% end %>
                <%= link_to requests_path(params.to_unsafe_h.merge('sort' => 'oldest')),
                    class: "flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-all #{params[:sort] == 'oldest' ? 'bg-indigo-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600'}" do %>
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4"/>
                  </svg>
                  <%= t('requests.index.oldest') %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Results List -->
        <% if @items.any? %>
          <div class="space-y-4">
            <% @items.each do |item| %>
              <% if @type == 'requests' %>
                <%= render 'request_card', request: item %>
              <% else %>
                <%= render 'offer_card', offer: item %>
              <% end %>
            <% end %>
          </div>

          <!-- Pagination -->
          <div class="mt-8 flex justify-center">
            <%= paginate @items %>
          </div>
        <% else %>
          <!-- Empty State -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md p-12 text-center border border-gray-200 dark:border-gray-700">
            <div class="max-w-md mx-auto">
              <svg class="w-24 h-24 mx-auto text-gray-400 dark:text-gray-600 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% if @type == 'requests' %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                <% else %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                <% end %>
              </svg>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                <% if @type == 'requests' %>
                  <%= t('requests.index.no_requests') %>
                <% else %>
                  <%= t('requests.index.no_offers') %>
                <% end %>
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-6">
                <% has_filters = params[:q].present? || params[:status].present? || params[:category_id].present? || (params[:time_period].present? && params[:time_period] != 'all') || params[:region].present? || params[:city].present? %>
                <% if has_filters %>
                  <%= t('requests.index.try_filters') %>
                <% elsif @type == 'requests' %>
                  <%= t('requests.index.no_category_requests') %>
                <% else %>
                  <%= t('requests.index.start_helping') %>
                <% end %>
              </p>
              <div class="flex gap-3 justify-center">
                <% has_filters = params[:q].present? || params[:status].present? || params[:category_id].present? || (params[:time_period].present? && params[:time_period] != 'all') || params[:region].present? || params[:city].present? %>
                <% if has_filters %>
                  <%= link_to t('requests.index.clear_filters'), requests_path(type: @type),
                      class: "px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-all shadow-lg hover:shadow-xl" %>
                <% elsif @type == 'requests' && user_signed_in? && policy(Request.new).create? %>
                  <%= link_to t('requests.index.create_request'), new_request_path,
                      class: "px-6 py-3 bg-indigo-600 text-white rounded-lg font-semibold hover:bg-indigo-700 transition-all shadow-lg hover:shadow-xl" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </main>
    </div>
  </div>
</div>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.line-clamp-3 {
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
</style>
