<!-- Stats Grid -->
<div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
  <!-- Total Users -->
  <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="rounded-md bg-indigo-500 dark:bg-indigo-600 p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Users</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @stats[:total_users] %></div>
              <div class="ml-2 flex items-baseline text-sm font-semibold text-green-600 dark:text-green-400">
                +<%= @stats[:new_users_today] %> today
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
      <%= link_to admin_users_path, class: "text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300" do %>
        View all users →
      <% end %>
    </div>
  </div>

  <!-- Total Requests -->
  <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="rounded-md bg-green-500 dark:bg-green-600 p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Requests</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @stats[:total_requests] %></div>
              <div class="ml-2 flex items-baseline text-sm font-semibold text-blue-600 dark:text-blue-400">
                <%= @stats[:open_requests] %> open
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
      <%= link_to admin_requests_path, class: "text-sm font-medium text-green-600 dark:text-green-400 hover:text-green-900 dark:hover:text-green-300" do %>
        View all requests →
      <% end %>
    </div>
  </div>

  <!-- Disputes -->
  <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">

      <div class="rounded-md bg-red-500 dark:bg-red-600 p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
        </div>

<div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Pending Reports</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @stats[:pending_reports] %></div>
              <div class="ml-2 flex items-baseline text-sm font-semibold text-red-600 dark:text-red-400">
                <%= @stats[:investigating_reports]
%> investigating
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
      <%= link_to admin_reports_path, class: "text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" do %>
        View all reports →
      <% end %>

</div>
  </div>

  <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="rounded-md bg-orange-500 dark:bg-orange-600 p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.546-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Disputed Requests</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @stats[:disputed_requests] %></div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
      <%= link_to "View disputes →", admin_requests_path(status: 'disputed'), class: "text-sm font-medium text-orange-600 dark:text-orange-400 hover:text-orange-900 dark:hover:text-orange-300" %>
    </div>
  </div>
  </div>

  <!-- Total Offers -->
  <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="rounded-md bg-yellow-500 dark:bg-yellow-600 p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Total Offers</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @stats[:total_offers] %></div>
              <div class="ml-2 flex items-baseline text-sm font-semibold text-yellow-600 dark:text-yellow-400">
                <%= @stats[:pending_offers] %> pending
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
      <%= link_to admin_offers_path, class: "text-sm font-medium text-yellow-600 dark:text-yellow-400 hover:text-yellow-900 dark:hover:text-yellow-300" do %>
        View all offers →
      <% end %>
    </div>
  </div>

  <!-- Pending Reports -->
  <div class="bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg hover:shadow-md transition-shadow">
    <div class="p-5">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="rounded-md bg-red-500 dark:bg-red-600 p-3">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
        </div>
        <div class="ml-5 w-0 flex-1">
          <dl>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Reports</dt>
            <dd class="flex items-baseline">
              <div class="text-2xl font-semibold text-gray-900 dark:text-gray-100"><%= @stats[:pending_reports] %></div>
              <div class="ml-2 flex items-baseline text-sm font-semibold text-red-600 dark:text-red-400">
                <%= @stats[:investigating_reports] %> investigating
              </div>
            </dd>
          </dl>
        </div>
      </div>
    </div>
    <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
      <%= link_to admin_reports_path, class: "text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" do %>
        View all reports →
      <% end %>
    </div>
  </div>
</div>

<!-- Activity Chart -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-8">
  <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
    <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Activity Overview (Last 7 Days)</h3>
  </div>
  <div class="p-6">
    <div class="flex items-end space-x-2 h-64">
      <% @chart_data[:labels].each_with_index do |label, index| %>
        <div class="flex-1 flex flex-col items-center">
          <div class="w-full flex items-end justify-center space-x-1 flex-1">
            <div class="flex flex-col items-center flex-1">
              <div
                class="w-full bg-indigo-500 dark:bg-indigo-600 rounded-t hover:bg-indigo-600 dark:hover:bg-indigo-700 transition-colors cursor-pointer"
                style="height: <%= [@chart_data[:users][index] * 10, 5].max %>px"
                title="<%= @chart_data[:users][index] %> users">
              </div>
            </div>
            <div class="flex flex-col items-center flex-1">
              <div
                class="w-full bg-green-500 dark:bg-green-600 rounded-t hover:bg-green-600 dark:hover:bg-green-700 transition-colors cursor-pointer"
                style="height: <%= [@chart_data[:requests][index] * 10, 5].max %>px"
                title="<%= @chart_data[:requests][index] %> requests">
              </div>
            </div>
          </div>
          <div class="text-xs text-gray-500 dark:text-gray-400 mt-2"><%= label %></div>
        </div>
      <% end %>
    </div>
    <div class="flex justify-center mt-4 space-x-6">
      <div class="flex items-center">
        <div class="w-3 h-3 bg-indigo-500 dark:bg-indigo-600 rounded mr-2"></div>
        <span class="text-sm text-gray-600 dark:text-gray-400">Users</span>
      </div>
      <div class="flex items-center">
        <div class="w-3 h-3 bg-green-500 dark:bg-green-600 rounded mr-2"></div>
        <span class="text-sm text-gray-600 dark:text-gray-400">Requests</span>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
  <!-- Recent Users -->
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg">
    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Recent Users</h3>
    </div>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @recent_users.each do |user| %>
        <li class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700">
          <%= link_to admin_user_path(user), class: "flex items-center justify-between" do %>
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10 rounded-full bg-indigo-600 dark:bg-indigo-700 flex items-center justify-center">
                <span class="text-white font-semibold"><%= user.username[0].upcase %></span>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100"><%= user.username %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400"><%= user.email %></p>
              </div>
            </div>
            <div class="text-right">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= user.admin? ? 'bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300' : user.moderator? ? 'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300' : 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300' %>">
                <%= user.role %>
              </span>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= time_ago_in_words(user.created_at) %> ago</p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <!-- Recent Requests -->
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg">
    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Recent Requests</h3>
    </div>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @recent_requests.each do |request| %>
        <li class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700">
          <%= link_to request_path(request), class: "block" do %>
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 dark:text-gray-100 truncate"><%= request.title %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                  by <%= request.user.username %> •
                  <%= request.category.name %>
                </p>
              </div>
              <div class="ml-4">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
                  case request.status
                  when 'open' then 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300'
                  when 'in_progress' then 'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300'
                  when 'completed' then 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300'
                  when 'cancelled' then 'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300'
                  end
                %>">
                  <%= request.status.humanize %>
                </span>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- Pending Reports -->
<% if @pending_reports.any? %>
  <div class="bg-white dark:bg-gray-800 shadow rounded-lg">
    <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100">Pending Reports</h3>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">
        <%= @pending_reports.count %> pending
      </span>
    </div>
    <ul class="divide-y divide-gray-200 dark:divide-gray-700">
      <% @pending_reports.each do |report| %>
        <li class="px-6 py-4 hover:bg-gray-50 dark:hover:bg-gray-700">
          <%= link_to admin_report_path(report), class: "flex items-center justify-between" do %>
            <div class="flex-1">
              <div class="flex items-center">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300">
                  <%= report.report_type.humanize %>
                </span>
                <span class="ml-2 text-sm text-gray-600 dark:text-gray-400">
                  Reported by <%= report.reporter.username %>
                </span>
              </div>
              <p class="text-sm text-gray-900 dark:text-gray-100 mt-2"><%= report.reason.truncate(100) %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= time_ago_in_words(report.created_at) %> ago</p>
            </div>
            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </li>
      <% end %>
    </ul>
    <div class="bg-gray-50 dark:bg-gray-700 px-6 py-3">
      <%= link_to admin_reports_path, class: "text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" do %>
        View all reports →
      <% end %>
    </div>
  </div>


<% end %>
