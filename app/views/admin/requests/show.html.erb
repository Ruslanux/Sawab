<% content_for(:page_title, "Review Request ##{@request.id}") %>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

  <!-- Левая колонка: Детали и Чат -->
  <div class="lg:col-span-2 space-y-6">
    <!-- ... (Карточка с деталями запроса - без изменений) ... -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h2 class="text-xl font-bold text-gray-900">
            <%= @request.title %>
          </h2>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= 
            case @request.status
            when 'open' then 'bg-green-100 text-green-800'
            when 'in_progress' then 'bg-blue-100 text-blue-800'
            when 'pending_completion' then 'bg-yellow-100 text-yellow-800'
            when 'disputed' then 'bg-orange-100 text-orange-800'
            when 'completed' then 'bg-gray-100 text-gray-800'
            when 'cancelled' then 'bg-red-100 text-red-800'
            end
          %>">
            <%= @request.status.humanize %>
          </span>
        </div>
      </div>
      <div class="px-6 py-5">
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-6">
          <div>
            <dt class="text-sm font-medium text-gray-500">Asker (Проситель)</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= link_to @request.user.username, admin_user_path(@request.user), class: "text-indigo-600 hover:underline" %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Category</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @request.category.name %></dd>
          </div>
          <div class="sm:col-span-2">
            <dt class="text-sm font-medium text-gray-500">Description</dt>
            <dd class="mt-1 text-sm text-gray-700 bg-gray-50 p-3 rounded-md border">
              <%= @request.description %>
            </dd>
          </div>
        </dl>
      </div>
    </div>

    <!-- Карточка с историей чата -->
    <div class="bg-white shadow rounded-lg overflow-hidden">
      <div class="px-6 py-5 border-b border-gray-200">
        <h3 class="text-lg font-medium text-gray-900">Chat History</h3>
      </div>
      <div class="p-6 space-y-4 h-[600px] overflow-y-auto border border-gray-200">
        <% if @conversation && @messages.any? %>
          <div id="messages" class="space-y-4">
            <% @messages.each do |message| %>
              <%= render partial: 'messages/message', locals: { message: message, viewing_user_id: current_user.id } %>
            <% end %>
          </div>
        <% elsif @conversation %>
          <p class="text-gray-500">В этом чате пока нет сообщений.</p>
        <% else %>
          <p class="text-gray-500">Чат для этого запроса еще не был создан (оффер не был принят).</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Правая колонка: Оффер и Действия -->
  <div class="lg:col-span-1 space-y-6">
    <div class="bg-white shadow rounded-lg p-6 sticky top-6">
      
      <!-- Детали оффера -->
      <% accepted_offer = @request.accepted_offer %>
      <% if accepted_offer %>
        <div class="border-b border-gray-200 pb-4">
          <h3 class="text-lg font-medium text-gray-900 mb-3">Accepted Offer</h3>
          <dl>
            <div>
              <dt class="text-sm font-medium text-gray-500">Helper (Помощник)</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to accepted_offer.user.username, admin_user_path(accepted_offer.user), class: "text-indigo-600 hover:underline" %>
              </dd>
            </div>
            <div class="mt-4">
              <dt class="text-sm font-medium text-gray-500">Message</dt>
              <dd class="mt-1 text-sm text-gray-700 bg-gray-50 p-3 rounded-md border">
                <%= accepted_offer.message %>
              </dd>
            </div>
          </dl>
        </div>
      <% else %>
         <div class="border-b border-gray-200 pb-4">
           <h3 class="text-lg font-medium text-gray-900 mb-3">No Accepted Offer</h3>
           <p class="text-sm text-gray-500">Этот запрос не был взят в работу.</p>
         </div>
      <% end %>

      <!-- Действия Админа -->
      <div class="mt-4">
        <h3 class="text-lg font-medium text-gray-900 mb-3">Admin Actions</h3>
        
        <%# === ИСПРАВЛЕНИЕ ЗДЕСЬ: Используем `policy(@request)` === %>
        <% if policy(@request).complete? || policy(@request).cancel? %>
        
          <% if policy(@request).complete? %>
            <p class="text-sm text-gray-600 mb-4">
              Этот запрос ожидает решения. Просмотрите чат и решите, следует ли присудить Sawab.
            </p>
            <div class="space-y-3">
              <!-- ИСПРАВЛЕНИЕ: Используем `complete_admin_request_path` -->
              <%= button_to "Award Sawab & Complete", complete_admin_request_path(@request),
                  method: :patch,
                  data: { turbo_confirm: "Вы уверены? Это завершит запрос и присудит 1 Sawab хелперу (#{accepted_offer&.user&.username})." },
                  class: "w-full inline-flex justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700" %>
            </div>
          <% end %>
            
          <% if policy(@request).cancel? %>
            <div class="mt-3">
              <!-- ИСПРАВЛЕНИЕ: Используем `cancel_admin_request_path` -->
              <%= button_to "Cancel Request (No Sawab)", cancel_admin_request_path(@request),
                  method: :patch,
                  data: { turbo_confirm: "Вы уверены? Это отменит запрос, Sawab не будет присужден." },
                  class: "w-full inline-flex justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          <% end %>
          
        <% else %>
          <p class="text-gray-500 text-sm">
            Нет доступных действий. Запрос в статусе: <strong><%= @request.status %></strong>.
          </p>
        <% end %>
      </div>
      
      <div class="mt-6 border-t pt-4">
        <%= link_to "← Back to all requests", admin_requests_path, class: "text-sm text-gray-600 hover:text-indigo-600" %>
      </div>
    </div>
  </div>

</div>
