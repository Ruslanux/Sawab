<!-- Filters -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6">
  <div class="px-6 py-4">
    <%= form_with url: admin_offers_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <%= f.text_field :search,
              value: params[:search],
              placeholder: "Search offers...",
              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <!-- Status Filter -->
        <div>
          <%= f.select :status,
              options_for_select([
                ['All Status', ''],
                ['Pending', 'pending'],
                ['Accepted', 'accepted'],
                ['Rejected', 'rejected']
              ], params[:status]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <!-- Category Filter -->
        <div>
          <%= f.select :category_id,
              options_for_select([['All Categories', '']] + Category.all.map { |c| [c.name, c.id] }, params[:category_id]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Total: <strong><%= @offers.total_count %></strong> offers
        </div>
        <div class="flex space-x-2">
          <%= link_to "Reset", admin_offers_path, class: "px-4 py-2 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" %>
          <%= f.submit "Apply Filters", class: "px-4 py-2 text-sm text-white bg-indigo-600 dark:bg-indigo-700 rounded-lg hover:bg-indigo-700 dark:hover:bg-indigo-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Offers List -->
<div class="space-y-4">
  <% @offers.each do |offer| %>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg hover:shadow-md transition-shadow">
      <div class="px-6 py-5">
        <div class="flex items-start justify-between">
          <div class="flex-1 min-w-0">
            <!-- Offer Info -->
            <div class="flex items-center space-x-3 mb-2">
              <div class="flex-shrink-0 h-10 w-10 rounded-full bg-yellow-600 dark:bg-yellow-700 flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-2">
                  <%= link_to offer.user.username, admin_user_path(offer.user), class: "font-medium text-gray-900 dark:text-gray-100 hover:text-indigo-600 dark:hover:text-indigo-400" %>
                  <span class="text-gray-400 dark:text-gray-500">offered help on</span>
                  <%= link_to offer.request.title, request_path(offer.request), class: "font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300" %>
                </div>
                <div class="flex items-center space-x-2 mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
                    case offer.status
                    when 'pending' then 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-300'
                    when 'accepted' then 'bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300'
                    when 'rejected' then 'bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300'
                    end
                  %>">
                    <%= offer.status.humanize %>
                  </span>
                  <span class="text-xs text-gray-500 dark:text-gray-400">
                    <%= time_ago_in_words(offer.created_at) %> ago
                  </span>
                </div>
              </div>
            </div>

            <!-- Offer Message -->
            <div class="mt-3 pl-12">
              <p class="text-sm text-gray-700 dark:text-gray-300 bg-gray-50 dark:bg-gray-700 rounded-lg p-3 border border-gray-200 dark:border-gray-600">
                <%= offer.message %>
              </p>
            </div>

            <!-- Request Info -->
            <div class="mt-3 pl-12">
              <div class="flex items-center space-x-4 text-sm text-gray-500 dark:text-gray-400">
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Request by: <%= link_to offer.request.user.username, admin_user_path(offer.request.user), class: "hover:text-indigo-600 dark:hover:text-indigo-400" %>
                </div>

                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  <%= offer.request.category.name %>
                </div>

                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Request Status: <span class="font-medium capitalize"><%= offer.request.status.humanize %></span>
                </div>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="ml-4 flex-shrink-0 flex space-x-2">
            <%= link_to request_path(offer.request),
                class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-lg text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" do %>
              <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              View Request
            <% end %>

            <%= button_to admin_offer_path(offer),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this offer?" },
                class: "inline-flex items-center px-3 py-2 border border-red-300 dark:border-red-700 text-sm font-medium rounded-lg text-red-700 dark:text-red-400 bg-white dark:bg-gray-700 hover:bg-red-50 dark:hover:bg-red-900/30" do %>
              <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination -->
<% if @offers.total_pages > 1 %>
  <div class="mt-6 flex items-center justify-between">
    <div class="text-sm text-gray-700 dark:text-gray-300">
      Showing
      <span class="font-medium"><%= @offers.offset_value + 1 %></span>
      to
      <span class="font-medium"><%= [@offers.offset_value + @offers.limit_value, @offers.total_count].min %></span>
      of
      <span class="font-medium"><%= @offers.total_count %></span>
      offers
    </div>
    <div class="flex space-x-2">
      <%= link_to_unless @offers.first_page?, "First", admin_offers_path(page: 1, search: params[:search], status: params[:status], category_id: params[:category_id]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @offers.first_page?}" %>

      <%= link_to_unless @offers.first_page?, "Previous", admin_offers_path(page: @offers.current_page - 1, search: params[:search], status: params[:status], category_id: params[:category_id]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @offers.first_page?}" %>

      <span class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 dark:bg-indigo-700 border border-indigo-600 dark:border-indigo-700 rounded-lg">
        <%= @offers.current_page %>
      </span>

      <%= link_to_unless @offers.last_page?, "Next", admin_offers_path(page: @offers.current_page + 1, search: params[:search], status: params[:status], category_id: params[:category_id]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @offers.last_page?}" %>

      <%= link_to_unless @offers.last_page?, "Last", admin_offers_path(page: @offers.total_pages, search: params[:search], status: params[:status], category_id: params[:category_id]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @offers.last_page?}" %>
    </div>
  </div>
<% end %>

<!-- Stats Summary -->
<div class="mt-6 grid grid-cols-1 md:grid-cols-3 gap-4">
  <div class="bg-yellow-50 dark:bg-yellow-900/30 border border-yellow-200 dark:border-yellow-700 rounded-lg p-4">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-yellow-500 dark:bg-yellow-600 rounded-md p-2">
        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-yellow-800 dark:text-yellow-300">Pending Offers</p>
        <p class="text-2xl font-bold text-yellow-900 dark:text-yellow-200"><%= Offer.pending.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-700 rounded-lg p-4">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-green-500 dark:bg-green-600 rounded-md p-2">
        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-green-800 dark:text-green-300">Accepted Offers</p>
        <p class="text-2xl font-bold text-green-900 dark:text-green-200"><%= Offer.accepted.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-red-50 dark:bg-red-900/30 border border-red-200 dark:border-red-700 rounded-lg p-4">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-red-500 dark:bg-red-600 rounded-md p-2">
        <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm font-medium text-red-800 dark:text-red-300">Rejected Offers</p>
        <p class="text-2xl font-bold text-red-900 dark:text-red-200"><%= Offer.rejected.count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Empty State -->
<% if @offers.empty? %>
  <div class="text-center py-12 bg-white dark:bg-gray-800 shadow rounded-lg">
    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No offers found</h3>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Try adjusting your filters to see more results.</p>
  </div>
<% end %>
