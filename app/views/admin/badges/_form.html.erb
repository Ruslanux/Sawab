<%= form_with(model: [:admin, badge], class: "bg-white shadow rounded-lg p-6 space-y-4") do |f| %>
  <% if badge.errors.any? %>
    <div class="bg-red-50 border border-red-300 text-red-800 px-4 py-3 rounded-md">
      <h2 class="font-bold"><%= pluralize(badge.errors.count, "error") %> prohibited this badge from being saved:</h2>
      <ul class="list-disc list-inside mt-2">
        <% badge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>
  
  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>
  
  <div>
    <%= f.label :icon_name, "Icon Filename", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :icon_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    <p class="mt-1 text-xs text-gray-500">E.g., "first_sawab". Файл должен быть в `app/assets/images/` и заканчиваться на `.svg`</p>
  </div>
  
  <div class="flex space-x-3">
    <%= f.submit "Save Badge", class: "px-4 py-2 text-sm text-white bg-indigo-600 rounded-lg hover:bg-indigo-700" %>
    <%= link_to "Cancel", admin_badges_path, class: "px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
  </div>
<% end %>
