<!-- Filters and Search -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg mb-6">
  <div class="px-6 py-4">
    <%= form_with url: admin_users_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <!-- Search -->
        <div class="md:col-span-2">
          <%= f.text_field :search,
              value: params[:search],
              placeholder: "Search by username or email...",
              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <!-- Role Filter -->
        <div>
          <%= f.select :role,
              options_for_select([
                ['All Roles', ''],
                ['Admin', 'admin'],
                ['Moderator', 'moderator'],
                ['User', 'user']
              ], params[:role]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>

        <!-- Status Filter -->
        <div>
          <%= f.select :status,
              options_for_select([
                ['All Status', ''],
                ['Banned', 'banned'],
                ['Active', 'active'],
                ['Inactive', 'inactive']
              ], params[:status]),
              {},
              class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-600 dark:text-gray-400">
          Total: <strong><%= @users.total_count %></strong> users
        </div>
        <div class="flex space-x-2">
          <%= link_to "Reset", admin_users_path, class: "px-4 py-2 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600" %>
          <%= f.submit "Apply Filters", class: "px-4 py-2 text-sm text-white bg-indigo-600 dark:bg-indigo-700 rounded-lg hover:bg-indigo-700 dark:hover:bg-indigo-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Users Table -->
<div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
    <thead class="bg-gray-50 dark:bg-gray-700">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          User
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          Role
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          Sawab
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          Activity
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          Status
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
          Joined
        </th>
        <th scope="col" class="relative px-6 py-3">
          <span class="sr-only">Actions</span>
        </th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
      <% @users.each do |user| %>
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10 rounded-full <%= user.banned_at ? 'bg-red-600 dark:bg-red-700' : 'bg-indigo-600 dark:bg-indigo-700' %> flex items-center justify-center">
                <span class="text-white font-semibold text-sm"><%= user.username[0].upcase %></span>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900 dark:text-gray-100">
                  <%= user.username %>
                  <% if user.banned_at %>
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">
                      Banned
                    </span>
                  <% end %>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400"><%= user.email %></div>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%=
              case user.role
              when 'admin' then 'bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300'
              when 'moderator' then 'bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300'
              else 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300'
              end
            %>">
              <%= user.role.humanize %>
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900 dark:text-gray-100 font-medium"><%= user.sawab_balance %></div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900 dark:text-gray-100">
              <%= user.requests.count %> requests
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              <%= user.offers.count %> offers
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if user.banned? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300">
                Banned
              </span>
            <% elsif user.last_sign_in_at && user.last_sign_in_at > 30.days.ago %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                Active
              </span>
            <% else %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">
                Inactive
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
            <%= user.created_at.strftime('%b %d, %Y') %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "View", admin_user_path(user), class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<!-- Pagination -->
<% if @users.total_pages > 1 %>
  <div class="mt-6 flex items-center justify-between">
    <div class="text-sm text-gray-700 dark:text-gray-300">
      Showing
      <span class="font-medium"><%= @users.offset_value + 1 %></span>
      to
      <span class="font-medium"><%= [@users.offset_value + @users.limit_value, @users.total_count].min %></span>
      of
      <span class="font-medium"><%= @users.total_count %></span>
      users
    </div>
    <div class="flex space-x-2">
      <%= link_to_unless @users.first_page?, "First", admin_users_path(page: 1, search: params[:search], role: params[:role], status: params[:status]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @users.first_page?}" %>

      <%= link_to_unless @users.first_page?, "Previous", admin_users_path(page: @users.current_page - 1, search: params[:search], role: params[:role], status: params[:status]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @users.first_page?}" %>

      <span class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 dark:bg-indigo-700 border border-indigo-600 dark:border-indigo-700 rounded-lg">
        <%= @users.current_page %>
      </span>

      <%= link_to_unless @users.last_page?, "Next", admin_users_path(page: @users.current_page + 1, search: params[:search], role: params[:role], status: params[:status]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @users.last_page?}" %>

      <%= link_to_unless @users.last_page?, "Last", admin_users_path(page: @users.total_pages, search: params[:search], role: params[:role], status: params[:status]), class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 #{'opacity-50 cursor-not-allowed' if @users.last_page?}" %>
    </div>
  </div>
<% end %>
