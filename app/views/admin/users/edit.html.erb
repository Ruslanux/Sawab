<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Edit User: <%= @user.username %></h1>
    <%= link_to '← Back to User', admin_user_path(@user), class: "text-sm text-gray-600 hover:text-indigo-600 transition" %>
  </div>

  <%# --- 
    form_with для админки. 
    model: [:admin, @user] - указывает на admin_user_path(@user)
    method: :patch - указывает, что это обновление
  --- %>
  <%= form_with(model: [:admin, @user], method: :patch, html: { class: "space-y-6 bg-white shadow-lg rounded-2xl p-8" }) do |f| %>
    
    <%# Рендерим ошибки, если они есть %>
    <% if f.object.errors.any? %>
      <div class="bg-red-50 border-l-4 border-red-400 text-red-700 p-4 rounded-md" role="alert">
        <h3 class="font-bold">Please fix the following errors:</h3>
        <ul class="list-disc list-inside mt-2 text-sm">
          <% f.object.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Avatar Section -->
    <div class="mb-6">
      <label class="block text-sm font-medium text-gray-700 mb-2">Profile Picture</label>
      <div class="flex items-center gap-4">
        <% if @user.profile_picture.attached? %>
          <%= image_tag @user.avatar_url(size: :small), class: "h-16 w-16 rounded-full object-cover" %>
          
          <%# --- 
            ИСПРАВЛЕНИЕ: Используем link_to с data-turbo-method: :delete.
            Это отправляет DELETE запрос без создания вложенной <form>.
            Маршрут взят из 'routes.rb' -> 'remove_avatar_admin_user_path'
          --- %>
          <%= link_to "Remove Picture", 
                remove_avatar_admin_user_path(@user), 
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                class: "text-sm text-red-600 hover:text-red-800 font-medium" %>
        <% else %>
          <div class="h-16 w-16 rounded-full bg-gray-200 flex items-center justify-center">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>
        <% end %>
      </div>
      <div class="mt-4">
        <%= f.file_field :profile_picture, 
            accept: "image/png,image/jpg,image/jpeg,image/gif",
            class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 cursor-pointer" %>
        <p class="text-xs text-gray-500 mt-1">PNG, JPG, JPEG or GIF. Max 5MB.</p>
      </div>
    </div>

    <!-- Basic Information -->
    <h3 class="text-xl font-bold text-gray-900 mb-6 border-t pt-6">Basic Information</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Username -->
      <div>
        <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :username, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
      
      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
      
      <!-- Phone -->
      <div>
        <%= f.label :phone, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :phone, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent", placeholder: "+7 XXX XXX XXXX" %>
      </div>
      
      <!-- Location -->
      <div>
        <%= f.label :location, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :location, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent", placeholder: "City, Country" %>
      </div>
    </div>
    
    <!-- Admin Fields -->
    <h3 class="text-xl font-bold text-gray-900 mb-6 border-t pt-6">Admin Settings</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Role -->
      <div>
        <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%# Используем массив ролей из модели User (user.rb) %>
        <%= f.select :role, %w[user admin moderator].map { |r| [r.humanize, r] }, {}, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
      
      <!-- Sawab Balance -->
      <div>
        <%= f.label :sawab_balance, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.number_field :sawab_balance, class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
    </div>

    <!-- Password Fields -->
    <h3 class="text-xl font-bold text-gray-900 mb-6 border-t pt-6">Change Password</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Password -->
      <div>
        <%= f.label :password, "New Password (leave blank to keep unchanged)", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
      
      <!-- Password Confirmation -->
      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
      </div>
    </div>
    
    <div class="flex justify-end pt-6 border-t border-gray-200 mt-6">
      <%= f.submit "Save Changes", class: "px-8 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all transform hover:scale-105 shadow-lg cursor-pointer" %>
    </div>
  <% end %>
</div>
