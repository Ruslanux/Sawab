<!-- Back Button -->
<div class="mb-6">
  <%= link_to admin_categories_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-900" do %>
    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Categories
  <% end %>
</div>

<!-- Edit Form -->
<div class="bg-white shadow rounded-lg">
  <%= form_with model: [:admin, @category], local: true, class: "space-y-6" do |f| %>
    <!-- Header -->
    <div class="px-6 py-5 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Edit Category</h2>
      <p class="mt-1 text-sm text-gray-500">Update category information</p>
    </div>

    <!-- Current Stats -->
    <div class="px-6 py-4 bg-gray-50">
      <h3 class="text-sm font-medium text-gray-700 mb-3">Current Statistics</h3>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <span class="text-gray-500">Requests:</span>
          <span class="font-semibold ml-2"><%= @category.requests.count %></span>
        </div>
        <div>
          <span class="text-gray-500">Offers:</span>
          <span class="font-semibold ml-2">
            <%= Offer.joins(:request).where(requests: { category_id: @category.id }).count %>
          </span>
        </div>
      </div>
    </div>

    <!-- Form Fields -->
    <div class="px-6 py-5 space-y-4">
      <div>
        <%= f.label :name, "Category Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, 
            required: true,
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        <% if @category.errors[:name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @category.errors[:name].first %></p>
        <% end %>
      </div>
    </div>

    <!-- Actions -->
    <div class="px-6 py-4 bg-gray-50 flex items-center justify-between">
      <div class="text-sm text-gray-500">
        Created: <%= @category.created_at.strftime("%B %d, %Y") %>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Cancel", admin_categories_path, 
            class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
        <%= f.submit "Save Changes", 
            class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Warning if has related data -->
<% requests_count = @category.requests.count %>
<% offers_count = Offer.joins(:request).where(requests: { category_id: @category.id }).count %>
<% if requests_count > 0 || offers_count > 0 %>
  <div class="mt-6 bg-yellow-50 border-l-4 border-yellow-400 p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-yellow-800">Warning</h3>
        <div class="mt-2 text-sm text-yellow-700">
          <p>This category has <%= requests_count %> request(s) and <%= offers_count %> offer(s). Changing the name will affect all related items.</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
