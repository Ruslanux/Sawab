<!-- Back Button -->
<div class="mb-6">
  <%= link_to admin_categories_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-900" do %>
    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Categories
  <% end %>
</div>

<!-- New Category Form -->
<div class="bg-white shadow rounded-lg">
  <%= form_with model: [:admin, @category], local: true, class: "space-y-6" do |f| %>
    <!-- Header -->
    <div class="px-6 py-5 border-b border-gray-200">
      <h2 class="text-xl font-semibold text-gray-900">Create New Category</h2>
      <p class="mt-1 text-sm text-gray-500">Add a new category for organizing requests and offers</p>
    </div>

    <!-- Info Box -->
    <div class="px-6 py-4 bg-blue-50">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-blue-800">About Categories</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>Categories help organize requests and offers on your platform. Choose a clear, descriptive name that users will easily understand.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Fields -->
    <div class="px-6 py-5 space-y-4">
      <div>
        <%= f.label :name, "Category Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :name, 
            required: true,
            autofocus: true,
            placeholder: "e.g., Transportation, Food, Education, Healthcare",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
        <% if @category.errors[:name].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @category.errors[:name].first %></p>
        <% end %>
        <p class="mt-1 text-xs text-gray-500">Choose a unique, descriptive name for this category</p>
      </div>
    </div>

    <!-- Examples Section -->
    <div class="px-6 py-4 bg-gray-50">
      <h3 class="text-sm font-medium text-gray-700 mb-3">Example Categories</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Transportation</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Food & Groceries</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Education</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Healthcare</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Housing</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Employment</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Legal Services</span>
        </div>
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Other</span>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="px-6 py-4 bg-gray-50 flex items-center justify-between">
      <p class="text-sm text-gray-500">
        Category names should be clear and easy to understand
      </p>
      <div class="flex space-x-3">
        <%= link_to "Cancel", admin_categories_path, 
            class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" %>
        <%= f.submit "Create Category", 
            class: "px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700" %>
      </div>
    </div>
  <% end %>
</div>

