<!-- Add New Category Button -->
<div class="mb-6 flex justify-end">
  <%= link_to new_admin_category_path,
      class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 dark:bg-indigo-700 hover:bg-indigo-700 dark:hover:bg-indigo-600" do %>
    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
    </svg>
    Add New Category
  <% end %>
</div>

<!-- Categories Grid -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @categories.each do |category| %>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
      <div class="px-6 py-5 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= category.name %></h3>
          <div class="flex items-center space-x-2">
            <%= link_to edit_admin_category_path(category),
                class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300" do %>
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
            <% end %>
            <%= button_to admin_category_path(category),
                method: :delete,
                data: { confirm: "Are you sure? This will fail if there are requests or offers in this category." },
                class: "text-red-600 dark:text-red-400 hover:text-red-900 dark:hover:text-red-300" do %>
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>

      <div class="px-6 py-4 bg-gray-50 dark:bg-gray-700">
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Requests</dt>
            <dd class="mt-1 flex items-center">
              <span class="text-2xl font-semibold text-indigo-600 dark:text-indigo-400"><%= category.requests.count %></span>
              <% if category.requests.where(status: 'open').any? %>
                <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                  <%= category.requests.where(status: 'open').count %> open
                </span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Offers</dt>
            <dd class="mt-1">
              <span class="text-2xl font-semibold text-yellow-600 dark:text-yellow-400">
                <%= category.requests.joins(:offers).count %>
              </span>
            </dd>
          </div>
        </dl>
      </div>

      <div class="px-6 py-3 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
        <%= link_to admin_category_path(category), class: "text-sm font-medium text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300" do %>
          View Details â†’
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Empty State -->
<% if @categories.empty? %>
  <div class="text-center py-12 bg-white dark:bg-gray-800 shadow rounded-lg">
    <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No categories</h3>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by creating a new category.</p>
    <div class="mt-6">
      <button onclick="document.getElementById('newCategoryModal').classList.remove('hidden')"
              class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 dark:bg-indigo-700 hover:bg-indigo-700 dark:hover:bg-indigo-600">
        <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Category
      </button>
    </div>
  </div>
<% end %>

<!-- Stats Summary -->
<div class="mt-8 bg-white dark:bg-gray-800 shadow rounded-lg p-6">
  <h3 class="text-lg font-medium text-gray-900 dark:text-gray-100 mb-4">Category Statistics</h3>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="text-center">
      <div class="text-3xl font-bold text-indigo-600 dark:text-indigo-400"><%= @categories.count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">Total Categories</div>
    </div>
    <div class="text-center">
      <div class="text-3xl font-bold text-green-600 dark:text-green-400"><%= Request.count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">Total Requests</div>
    </div>
    <div class="text-center">
      <div class="text-3xl font-bold text-yellow-600 dark:text-yellow-400"><%= Offer.count %></div>
      <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">Total Offers</div>
    </div>
    <div class="text-center">
      <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">
        <%= @categories.any? ? (Request.count.to_f / @categories.count).round(1) : 0 %>
      </div>
      <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">Avg Requests/Category</div>
    </div>
  </div>
</div>
