<!-- Back Button -->
<div class="mb-6">
  <%= link_to admin_categories_path, class: "inline-flex items-center text-indigo-600 hover:text-indigo-900" do %>
    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
    </svg>
    Back to Categories
  <% end %>
</div>

<!-- Category Header -->
<div class="bg-white shadow rounded-lg mb-6">
  <div class="px-6 py-5 border-b border-gray-200">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-2xl font-bold text-gray-900"><%= @category.name %></h2>
        <p class="mt-1 text-sm text-gray-500">Created <%= time_ago_in_words(@category.created_at) %> ago</p>
      </div>
      <div class="flex space-x-2">
        <%= link_to edit_admin_category_path(@category), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
          Edit
        <% end %>
        <%= button_to admin_category_path(@category), 
            method: :delete,
            data: { confirm: "Are you sure you want to delete this category? This will fail if there are requests or offers." },
            class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-lg text-red-700 bg-white hover:bg-red-50" do %>
          <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics -->
  <div class="px-6 py-5">
    <dl class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-indigo-50 rounded-lg p-4">
        <dt class="text-sm font-medium text-indigo-600">Total Requests</dt>
        <dd class="mt-2 flex items-baseline">
          <span class="text-3xl font-bold text-indigo-900"><%= @category.requests.count %></span>
          <% if @category.requests.where(status: 'open').any? %>
            <span class="ml-2 text-sm font-medium text-green-600">
              (<%= @category.requests.where(status: 'open').count %> open)
            </span>
          <% end %>
        </dd>
      </div>

      <div class="bg-yellow-50 rounded-lg p-4">
        <dt class="text-sm font-medium text-yellow-600">Total Offers</dt>
        <dd class="mt-2">
          <span class="text-3xl font-bold text-yellow-900">
            <%= Offer.joins(:request).where(requests: { category_id: @category.id }).count %>
          </span>
        </dd>
      </div>

      <div class="bg-green-50 rounded-lg p-4">
        <dt class="text-sm font-medium text-green-600">Completion Rate</dt>
        <dd class="mt-2">
          <% total = @category.requests.count %>
          <% completed = @category.requests.where(status: 'completed').count %>
          <span class="text-3xl font-bold text-green-900">
            <%= total > 0 ? ((completed.to_f / total * 100).round(1)) : 0 %>%
          </span>
        </dd>
      </div>
    </dl>
  </div>
</div>

<!-- Recent Requests -->
<div class="bg-white shadow rounded-lg mb-6">
  <div class="px-6 py-5 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Recent Requests</h3>
  </div>
  
  <% if @requests.any? %>
    <div class="divide-y divide-gray-200">
      <% @requests.each do |request| %>
        <div class="px-6 py-4 hover:bg-gray-50">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center">
                <h4 class="text-sm font-medium text-gray-900"><%= request.title %></h4>
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
                  <%= case request.status
                      when 'open' then 'bg-green-100 text-green-800'
                      when 'in_progress' then 'bg-blue-100 text-blue-800'
                      when 'completed' then 'bg-gray-100 text-gray-800'
                      when 'cancelled' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= request.status.humanize %>
                </span>
              </div>
              <p class="mt-1 text-sm text-gray-500 line-clamp-2"><%= request.description %></p>
              <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <%= request.user.username %>
                </div>
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <%= time_ago_in_words(request.created_at) %> ago
                </div>
                <div class="flex items-center">
                  <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                  </svg>
                  <%= request.offers.count %> offers
                </div>
              </div>
            </div>
            <div class="ml-4">
              <%= link_to request_path(request), 
                  class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" do %>
                View
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @category.requests.count > 10 %>
      <div class="px-6 py-4 bg-gray-50 text-center">
        <%= link_to "View All Requests in #{@category.name}", 
            admin_requests_path(category_id: @category.id), 
            class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
      </div>
    <% end %>
  <% else %>
    <div class="px-6 py-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No requests yet</h3>
      <p class="mt-1 text-sm text-gray-500">No requests have been created in this category.</p>
    </div>
  <% end %>
</div>

<!-- Recent Offers -->
<div class="bg-white shadow rounded-lg">
  <div class="px-6 py-5 border-b border-gray-200">
    <h3 class="text-lg font-medium text-gray-900">Recent Offers</h3>
  </div>
  
  <% if @offers.any? %>
    <div class="divide-y divide-gray-200">
      <% @offers.each do |offer| %>
        <div class="px-6 py-4 hover:bg-gray-50">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <span class="ml-2 text-sm font-medium text-gray-900"><%= offer.user.username %></span>
                <span class="ml-2 text-sm text-gray-500">offered help on</span>
                <%= link_to offer.request.title, request_path(offer.request), 
                    class: "ml-2 text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
                <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium capitalize
                  <%= case offer.status
                      when 'pending' then 'bg-yellow-100 text-yellow-800'
                      when 'accepted' then 'bg-green-100 text-green-800'
                      when 'rejected' then 'bg-red-100 text-red-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= offer.status.humanize %>
                </span>
              </div>
              <p class="mt-2 text-sm text-gray-600 ml-7"><%= offer.message %></p>
              <p class="mt-1 text-xs text-gray-500 ml-7"><%= time_ago_in_words(offer.created_at) %> ago</p>
            </div>
            <div class="ml-4">
              <%= link_to request_path(offer.request), 
                  class: "inline-flex items-center px-3 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50" do %>
                View Request
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% offers_count = Offer.joins(:request).where(requests: { category_id: @category.id }).count %>
    <% if offers_count > 10 %>
      <div class="px-6 py-4 bg-gray-50 text-center">
        <%= link_to "View All Offers in #{@category.name}", 
            admin_offers_path(category_id: @category.id), 
            class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
      </div>
    <% end %>
  <% else %>
    <div class="px-6 py-12 text-center">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No offers yet</h3>
      <p class="mt-1 text-sm text-gray-500">No offers have been made for requests in this category.</p>
    </div>
  <% end %>
</div>
