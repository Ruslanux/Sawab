<div class="min-h-screen bg-gradient-to-br from-purple-50 to-indigo-100 dark:from-gray-900 dark:to-gray-800 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gradient-to-r from-indigo-600 to-purple-600 mb-4 shadow-lg">
        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
      </div>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-2"><%= t('users.edit.title') %></h1>
      <p class="text-gray-600 dark:text-gray-400 text-lg"><%= t('users.edit.subtitle') %></p>
    </div>

    <%= form_with(model: @user, url: profile_path, method: :patch, local: true, html: { class: "space-y-8" }) do |f| %>
      
      <!-- Profile Picture Section -->
      <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300">
        <div class="flex flex-col md:flex-row items-center md:items-start space-y-6 md:space-y-0 md:space-x-8">
          <!-- Avatar Preview -->
          <div class="flex-shrink-0">
            <div class="relative group">
              <% if @user.profile_picture.attached? %>
                <%= image_tag @user.profile_picture.variant(resize_to_limit: [140, 140]),
                    class: "h-36 w-36 rounded-full object-cover border-4 border-indigo-200 dark:border-indigo-700 shadow-lg group-hover:border-indigo-400 dark:group-hover:border-indigo-500 transition-all duration-300" %>
              <% else %>
                <div class="h-36 w-36 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center border-4 border-indigo-200 dark:border-indigo-700 shadow-lg group-hover:border-indigo-400 dark:group-hover:border-indigo-500 transition-all duration-300">
                  <span class="text-5xl font-bold text-white"><%= @user.username[0].upcase %></span>
                </div>
              <% end %>

              <!-- Camera Icon Overlay -->
              <div class="absolute bottom-0 right-0 bg-white dark:bg-gray-700 rounded-full p-3 shadow-lg border-2 border-indigo-200 dark:border-indigo-700">
                <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- Upload Controls -->
          <div class="flex-1 w-full">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-4"><%= t('users.edit.profile_picture') %></h3>
            
            <div class="space-y-4">
              <!-- File Input -->
              <div class="relative">
                <%= f.file_field :profile_picture,
                    accept: "image/png,image/jpg,image/jpeg,image/gif",
                    class: "block w-full text-sm text-gray-600 dark:text-gray-300 file:mr-4 file:py-3 file:px-6 file:rounded-xl file:border-0 file:text-sm file:font-semibold file:bg-gradient-to-r file:from-indigo-500 file:to-purple-600 file:text-white hover:file:from-indigo-600 hover:file:to-purple-700 file:cursor-pointer file:transition-all file:shadow-md" %>
              </div>

              <div class="flex items-start space-x-2 text-xs text-gray-500 dark:text-gray-400 bg-gray-50 dark:bg-gray-700 p-3 rounded-lg">
                <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span><%= t('users.edit.supported_formats') %></span>
              </div>

              <!-- Remove Button -->
              <% if @user.profile_picture.attached? %>
                <div class="pt-2">
                  <%= link_to remove_avatar_profile_path,
                      method: :delete,
                      data: { turbo_method: :delete, turbo_confirm: t('users.edit.remove_confirm') },
                      class: "inline-flex items-center space-x-2 text-sm text-red-600 hover:text-red-800 font-medium transition-colors group" do %>
                    <svg class="w-4 h-4 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    <span><%= t('users.edit.remove_picture') %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Basic Information -->
      <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300">
        <div class="flex items-center space-x-3 mb-6">
          <div class="p-2 bg-indigo-100 dark:bg-indigo-900/30 rounded-lg">
            <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= t('users.edit.basic_information') %></h3>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Username -->
          <div>
            <%= f.label :username, t('users.edit.username'), class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.text_field :username,
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all shadow-sm hover:shadow-md",
                placeholder: t('users.edit.username_placeholder') %>
            <% if @user.errors[:username].any? %>
              <div class="mt-2 flex items-center space-x-1 text-sm text-red-600">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <span><%= @user.errors[:username].first %></span>
              </div>
            <% end %>
          </div>

          <!-- Email -->
          <div>
            <%= f.label :email, t('users.edit.email'), class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.email_field :email,
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all shadow-sm hover:shadow-md",
                placeholder: t('users.edit.email_placeholder') %>
            <% if @user.errors[:email].any? %>
              <div class="mt-2 flex items-center space-x-1 text-sm text-red-600">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <span><%= @user.errors[:email].first %></span>
              </div>
            <% end %>
          </div>

          <!-- Phone -->
          <div>
            <%= f.label :phone, t('users.edit.phone'), class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <%= f.text_field :phone,
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all shadow-sm hover:shadow-md",
                  placeholder: t('users.edit.phone_placeholder') %>
            </div>
          </div>

          <!-- Location -->
          <div>
            <%= f.label :location, t('users.edit.location'), class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <div class="relative">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
              </div>
              <%= f.text_field :location,
                  class: "w-full pl-10 pr-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all shadow-sm hover:shadow-md",
                  placeholder: t('users.edit.location_placeholder') %>
            </div>
          </div>
        </div>
      </div>

      <!-- Change Password -->
      <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-xl p-8 hover:shadow-2xl transition-shadow duration-300">
        <div class="flex items-center space-x-3 mb-6">
          <div class="p-2 bg-purple-100 dark:bg-purple-900/30 rounded-lg">
            <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= t('users.edit.change_password') %></h3>
            <p class="text-sm text-gray-500 dark:text-gray-400 mt-1"><%= t('users.edit.password_help') %></p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- New Password -->
          <div>
            <%= f.label :password, t('users.edit.new_password'), class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.password_field :password,
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all shadow-sm hover:shadow-md",
                placeholder: t('users.edit.new_password_placeholder') %>
            <p class="mt-2 text-xs text-gray-500 dark:text-gray-400 flex items-center space-x-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span><%= t('users.edit.password_min') %></span>
            </p>
          </div>

          <!-- Password Confirmation -->
          <div>
            <%= f.label :password_confirmation, t('users.edit.confirm_password'), class: "block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2" %>
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                class: "w-full px-4 py-3 border border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all shadow-sm hover:shadow-md",
                placeholder: t('users.edit.confirm_password_placeholder') %>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4 pt-6">
        <%= link_to user_path(@user.username),
            class: "w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 border-2 border-gray-300 dark:border-gray-600 rounded-xl text-gray-700 dark:text-gray-300 font-semibold hover:bg-gray-50 dark:hover:bg-gray-700 hover:border-gray-400 dark:hover:border-gray-500 transition-all shadow-sm hover:shadow-md" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          <%= t('users.edit.cancel') %>
        <% end %>

        <%= f.submit t('users.edit.update'),
            class: "w-full sm:w-auto inline-flex items-center justify-center px-10 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all transform hover:scale-105 hover:shadow-xl shadow-lg cursor-pointer" %>
      </div>

    <% end %>

    <!-- Danger Zone: Delete Account -->
    <div class="mt-12 bg-red-50 dark:bg-red-900/20 border-2 border-red-200 dark:border-red-800 rounded-3xl p-8">
      <div class="flex items-center space-x-3 mb-4">
        <div class="p-2 bg-red-100 dark:bg-red-900/40 rounded-lg">
          <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-xl font-bold text-red-700 dark:text-red-400"><%= t('users.destroy.danger_zone') %></h3>
          <p class="text-sm text-red-600 dark:text-red-300 mt-1"><%= t('users.destroy.warning') %></p>
        </div>
      </div>

      <div class="bg-white dark:bg-gray-800 rounded-xl p-4 mb-4">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2"><%= t('users.destroy.description') %></p>
        <ul class="text-sm text-gray-500 dark:text-gray-400 list-disc list-inside space-y-1">
          <li><%= t('users.destroy.will_delete.requests') %></li>
          <li><%= t('users.destroy.will_delete.offers') %></li>
          <li><%= t('users.destroy.will_delete.messages') %></li>
          <li><%= t('users.destroy.will_delete.reviews') %></li>
          <li><%= t('users.destroy.will_delete.notifications') %></li>
        </ul>
      </div>

      <%= button_to destroy_profile_path,
          method: :delete,
          data: { turbo_confirm: t('users.destroy.confirm') },
          class: "inline-flex items-center justify-center px-6 py-3 bg-red-600 text-white font-semibold rounded-xl hover:bg-red-700 transition-all shadow-md hover:shadow-lg" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        <%= t('users.destroy.button') %>
      <% end %>
    </div>
  </div>
</div>
